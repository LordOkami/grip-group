---
import Layout from '../../layouts/Layout.astro';
import { getContent } from '../../i18n/utils';

const content = await getContent('en', 'home');
---

<Layout title={content.meta.title} currentPage="home">
  <!-- Hero Section -->
  <section class="relative min-h-[90vh] flex items-center justify-center overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 bg-gradient-racing">
      <div class="absolute inset-0 opacity-10" style="background-image: url('data:image/svg+xml,%3Csvg width=\'60\' height=\'60\' viewBox=\'0 0 60 60\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cg fill=\'none\' fill-rule=\'evenodd\'%3E%3Cg fill=\'%23ffffff\' fill-opacity=\'0.4\'%3E%3Cpath d=\'M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
    </div>

    <!-- Animated Lines -->
    <div class="absolute top-1/4 left-0 w-full h-px bg-gradient-to-r from-transparent via-vanilla/30 to-transparent"></div>
    <div class="absolute top-3/4 left-0 w-full h-px bg-gradient-to-r from-transparent via-vanilla/20 to-transparent"></div>

    <div class="relative z-20 container mx-auto px-4 md:px-8 text-center">
      <!-- Logo + Presents -->
      <div class="mb-0">
        <img
          src="/logo/logo_text_only.png"
          alt="Grip Club"
          class="h-6 md:h-8 mx-auto invert brightness-200"
        />
        <span class="text-vanilla/80 text-xs md:text-sm uppercase tracking-[0.3em] mt-1 block">presents</span>
      </div>

      <!-- Desafío Bronce Icon with Effects -->
      <div class="hero-badge-container relative mx-auto w-full max-w-md mb-1">
        <div class="hero-badge-glow absolute inset-0 opacity-0 transition-opacity duration-500"></div>
        <img
          id="hero-badge"
          src="/desafios/desafio_bronce_icon_2.png"
          alt="Desafío Bronce 8 Horas 125cc 4T"
          class="hero-badge w-full relative z-10 drop-shadow-2xl transition-all duration-300 ease-out cursor-pointer"
        />
        <div class="hero-badge-shine absolute inset-0 z-20 pointer-events-none opacity-0"></div>
      </div>

      <p class="text-lg md:text-xl text-racing-silver max-w-3xl mx-auto mb-6">
        {content.hero.subtitle}<br>
        <span class="text-white font-semibold">{content.hero.subtitleBold}</span>
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a href={content.hero.ctaLink} class="btn-primary">
          {content.hero.cta}
        </a>
        <a href={content.hero.ctaSecondaryLink} class="btn-secondary">
          {content.hero.ctaSecondary}
        </a>
      </div>

      <!-- Stats -->
      <div class="grid grid-cols-3 gap-4 md:gap-8 mt-12 max-w-2xl mx-auto">
        {content.hero.stats.map((stat: { top?: string; topSize?: string; middle?: string; middleSize?: string; bottom?: string; bottomSize?: string; value?: string; label?: string }) => (
          <div class="text-center flex flex-col justify-center items-center gap-1">
            {stat.top ? (
              <>
                {stat.top && (
                  <div class={`text-vanilla uppercase tracking-wider ${stat.topSize === 'large' ? 'text-4xl md:text-5xl font-bold' : 'text-sm text-racing-silver'}`} style={stat.topSize === 'large' ? "font-family: 'Bebas Neue', sans-serif;" : ""}>{stat.top}</div>
                )}
                {stat.middle && (
                  <div class={`text-vanilla uppercase tracking-wider ${stat.middleSize === 'large' ? 'text-4xl md:text-5xl font-bold' : 'text-sm text-racing-silver'}`} style={stat.middleSize === 'large' ? "font-family: 'Bebas Neue', sans-serif;" : ""}>{stat.middle}</div>
                )}
                {stat.bottom && (
                  <div class={`text-vanilla uppercase tracking-wider ${stat.bottomSize === 'large' ? 'text-4xl md:text-5xl font-bold' : 'text-sm text-racing-silver'}`} style={stat.bottomSize === 'large' ? "font-family: 'Bebas Neue', sans-serif;" : ""}>{stat.bottom}</div>
                )}
              </>
            ) : (
              <>
                <div class="text-racing-silver text-sm uppercase tracking-wider">{stat.label}</div>
                <div class="text-4xl md:text-5xl font-bold text-vanilla" style="font-family: 'Bebas Neue', sans-serif;">{stat.value}</div>
              </>
            )}
          </div>
        ))}
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
      <svg class="w-6 h-6 text-racing-silver" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
      </svg>
    </div>
  </section>

  <style>
    .hero-badge-container:hover .hero-badge {
      transform: scale(1.05) translateY(-5px);
      filter: drop-shadow(0 25px 50px rgba(205, 127, 50, 0.4));
    }

    .hero-badge-container:hover .hero-badge-glow {
      opacity: 1;
    }

    .hero-badge-glow {
      background: radial-gradient(ellipse at center, rgba(205, 127, 50, 0.3) 0%, transparent 70%);
      filter: blur(40px);
      transform: scale(1.5);
    }

    .hero-badge-shine {
      background: linear-gradient(
        105deg,
        transparent 40%,
        rgba(255, 255, 255, 0.4) 45%,
        rgba(255, 255, 255, 0.6) 50%,
        rgba(255, 255, 255, 0.4) 55%,
        transparent 60%
      );
      background-size: 200% 100%;
      background-position: 200% 0;
      -webkit-mask-image: url('/desafios/desafio_bronce_icon_2.png');
      mask-image: url('/desafios/desafio_bronce_icon_2.png');
      -webkit-mask-size: contain;
      mask-size: contain;
      -webkit-mask-repeat: no-repeat;
      mask-repeat: no-repeat;
      -webkit-mask-position: center;
      mask-position: center;
    }

    .hero-badge-container:hover .hero-badge-shine {
      opacity: 1;
      animation: shine 1.5s ease-in-out infinite;
    }

    @keyframes shine {
      0% { background-position: 200% 0; }
      50% { background-position: -200% 0; }
      100% { background-position: -200% 0; }
    }

  </style>

  <script>
    // Mouse tracking for badge
    function initBadgeInteraction() {
      const badge = document.getElementById('hero-badge');
      if (!badge) return;

      const container = badge.parentElement;

      container?.addEventListener('mousemove', (e) => {
        const rect = container.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const y = e.clientY - rect.top;
        const centerX = rect.width / 2;
        const centerY = rect.height / 2;

        const rotateX = (y - centerY) / 20;
        const rotateY = (centerX - x) / 20;

        badge.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) scale(1.05) translateY(-5px)`;
      });

      container?.addEventListener('mouseleave', () => {
        badge.style.transform = 'perspective(1000px) rotateX(0) rotateY(0) scale(1) translateY(0)';
      });
    }

    // Ultra-realistic 125cc 4T motorcycle pass-by sound
    function playMotoSound() {
      const ctx = new (window.AudioContext || (window as any).webkitAudioContext)();
      const now = ctx.currentTime;
      const duration = 2.5;
      const peakTime = duration * 0.42; // When bike is closest

      // Master bus with compression and EQ
      const masterGain = ctx.createGain();
      const compressor = ctx.createDynamicsCompressor();
      compressor.threshold.value = -24;
      compressor.knee.value = 30;
      compressor.ratio.value = 12;
      compressor.attack.value = 0.003;
      compressor.release.value = 0.25;

      const masterEQ = ctx.createBiquadFilter();
      masterEQ.type = 'peaking';
      masterEQ.frequency.value = 800;
      masterEQ.Q.value = 1;
      masterEQ.gain.value = 3;

      const panner = ctx.createStereoPanner();

      masterGain.connect(masterEQ);
      masterEQ.connect(compressor);
      compressor.connect(panner);
      panner.connect(ctx.destination);

      // Realistic Doppler panning
      panner.pan.setValueAtTime(-1, now);
      panner.pan.setTargetAtTime(-0.3, now + duration * 0.2, 0.3);
      panner.pan.setTargetAtTime(0, now + peakTime, 0.1);
      panner.pan.setTargetAtTime(0.5, now + duration * 0.6, 0.2);
      panner.pan.linearRampToValueAtTime(1, now + duration);

      // === ENGINE SOUND ===
      // 125cc 4T single at ~9000-11000 RPM = 75-92 Hz firing frequency
      const approachRPM = 9500;
      const peakRPM = 11500;
      const departRPM = 8000;

      const rpmToFreq = (rpm: number) => rpm / 120; // 4-stroke single: RPM/60/2
      const baseApproach = rpmToFreq(approachRPM);
      const basePeak = rpmToFreq(peakRPM);
      const baseDepart = rpmToFreq(departRPM);

      // Primary engine harmonics (cylinder firing)
      const engineHarmonics = [
        { mult: 0.5, gain: 0.15, type: 'sine' as OscillatorType },      // Sub-harmonic rumble
        { mult: 1, gain: 0.35, type: 'sawtooth' as OscillatorType },    // Fundamental
        { mult: 2, gain: 0.28, type: 'sawtooth' as OscillatorType },    // 2nd harmonic
        { mult: 3, gain: 0.18, type: 'square' as OscillatorType },      // 3rd - adds bite
        { mult: 4, gain: 0.12, type: 'sawtooth' as OscillatorType },    // 4th
        { mult: 5, gain: 0.08, type: 'square' as OscillatorType },      // 5th
        { mult: 6, gain: 0.05, type: 'sawtooth' as OscillatorType },    // 6th
        { mult: 8, gain: 0.03, type: 'square' as OscillatorType },      // 8th - high end sizzle
      ];

      engineHarmonics.forEach((h) => {
        const osc = ctx.createOscillator();
        const gain = ctx.createGain();
        const filter = ctx.createBiquadFilter();

        osc.type = h.type;
        filter.type = 'lowpass';
        filter.frequency.value = Math.min(3000, 400 * h.mult);
        filter.Q.value = 0.7;

        osc.connect(filter);
        filter.connect(gain);
        gain.connect(masterGain);

        // Doppler frequency shift
        osc.frequency.setValueAtTime(baseApproach * h.mult, now);
        osc.frequency.exponentialRampToValueAtTime(basePeak * h.mult * 1.15, now + peakTime);
        osc.frequency.exponentialRampToValueAtTime(baseDepart * h.mult * 0.85, now + duration);

        // Volume: proximity effect (inverse square approximation)
        const g = h.gain * 0.15;
        gain.gain.setValueAtTime(0.001, now);
        gain.gain.exponentialRampToValueAtTime(g * 0.2, now + 0.1);
        gain.gain.exponentialRampToValueAtTime(g * 0.5, now + duration * 0.25);
        gain.gain.exponentialRampToValueAtTime(g, now + peakTime);
        gain.gain.exponentialRampToValueAtTime(g * 0.6, now + duration * 0.55);
        gain.gain.exponentialRampToValueAtTime(g * 0.2, now + duration * 0.8);
        gain.gain.exponentialRampToValueAtTime(0.001, now + duration);

        osc.start(now);
        osc.stop(now + duration + 0.1);
      });

      // === EXHAUST RESONANCE ===
      const exhaustOsc = ctx.createOscillator();
      const exhaustGain = ctx.createGain();
      const exhaustFilter = ctx.createBiquadFilter();
      const exhaustFilter2 = ctx.createBiquadFilter();

      exhaustOsc.type = 'sawtooth';
      exhaustFilter.type = 'bandpass';
      exhaustFilter.frequency.value = 180;
      exhaustFilter.Q.value = 8;
      exhaustFilter2.type = 'lowpass';
      exhaustFilter2.frequency.value = 600;

      exhaustOsc.connect(exhaustFilter);
      exhaustFilter.connect(exhaustFilter2);
      exhaustFilter2.connect(exhaustGain);
      exhaustGain.connect(masterGain);

      exhaustOsc.frequency.setValueAtTime(baseApproach * 2, now);
      exhaustOsc.frequency.exponentialRampToValueAtTime(basePeak * 2, now + peakTime);
      exhaustOsc.frequency.exponentialRampToValueAtTime(baseDepart * 2, now + duration);

      exhaustGain.gain.setValueAtTime(0.001, now);
      exhaustGain.gain.exponentialRampToValueAtTime(0.08, now + peakTime);
      exhaustGain.gain.exponentialRampToValueAtTime(0.001, now + duration);

      exhaustOsc.start(now);
      exhaustOsc.stop(now + duration + 0.1);

      // === INTAKE NOISE ===
      const intakeLength = Math.floor(ctx.sampleRate * duration);
      const intakeBuffer = ctx.createBuffer(1, intakeLength, ctx.sampleRate);
      const intakeData = intakeBuffer.getChannelData(0);

      for (let i = 0; i < intakeLength; i++) {
        const t = i / ctx.sampleRate;
        const freq = baseApproach + (basePeak - baseApproach) * Math.min(1, t / peakTime);
        const period = ctx.sampleRate / freq;
        const phase = (i % period) / period;
        // Pulsing intake whoosh
        intakeData[i] = (Math.random() * 2 - 1) * (phase < 0.3 ? 0.8 : 0.2) * Math.sin(Math.PI * t / duration);
      }

      const intakeSource = ctx.createBufferSource();
      const intakeGain = ctx.createGain();
      const intakeFilter = ctx.createBiquadFilter();

      intakeSource.buffer = intakeBuffer;
      intakeFilter.type = 'bandpass';
      intakeFilter.frequency.value = 350;
      intakeFilter.Q.value = 2;

      intakeSource.connect(intakeFilter);
      intakeFilter.connect(intakeGain);
      intakeGain.connect(masterGain);

      intakeGain.gain.setValueAtTime(0.001, now);
      intakeGain.gain.exponentialRampToValueAtTime(0.04, now + peakTime);
      intakeGain.gain.exponentialRampToValueAtTime(0.001, now + duration);

      intakeSource.start(now);
      intakeSource.stop(now + duration + 0.1);

      // === MECHANICAL/VALVE TRAIN NOISE ===
      const mechLength = Math.floor(ctx.sampleRate * duration);
      const mechBuffer = ctx.createBuffer(1, mechLength, ctx.sampleRate);
      const mechData = mechBuffer.getChannelData(0);

      for (let i = 0; i < mechLength; i++) {
        const t = i / ctx.sampleRate;
        const freq = baseApproach * 2 + (basePeak - baseApproach) * 2 * Math.min(1, t / peakTime);
        const period = ctx.sampleRate / freq;
        const phase = (i % period) / period;
        // Sharp clicks for valve train
        mechData[i] = phase < 0.05 ? (Math.random() - 0.5) * 2 : (Math.random() - 0.5) * 0.1;
      }

      const mechSource = ctx.createBufferSource();
      const mechGain = ctx.createGain();
      const mechFilter = ctx.createBiquadFilter();

      mechSource.buffer = mechBuffer;
      mechFilter.type = 'highpass';
      mechFilter.frequency.value = 2000;
      mechFilter.Q.value = 1;

      mechSource.connect(mechFilter);
      mechFilter.connect(mechGain);
      mechGain.connect(masterGain);

      mechGain.gain.setValueAtTime(0.001, now);
      mechGain.gain.exponentialRampToValueAtTime(0.025, now + peakTime);
      mechGain.gain.exponentialRampToValueAtTime(0.001, now + duration);

      mechSource.start(now);
      mechSource.stop(now + duration + 0.1);

      // === EXHAUST CRACKLE/POPS ===
      const crackleLength = Math.floor(ctx.sampleRate * duration);
      const crackleBuffer = ctx.createBuffer(1, crackleLength, ctx.sampleRate);
      const crackleData = crackleBuffer.getChannelData(0);

      for (let i = 0; i < crackleLength; i++) {
        const t = i / ctx.sampleRate;
        // More pops after peak (deceleration)
        const popChance = t > peakTime ? 0.0008 : 0.0002;
        if (Math.random() < popChance) {
          const popLength = Math.floor(Math.random() * 400 + 100);
          for (let j = 0; j < popLength && i + j < crackleLength; j++) {
            crackleData[i + j] = (Math.random() * 2 - 1) * Math.exp(-j / 80) * 1.5;
          }
        }
      }

      const crackleSource = ctx.createBufferSource();
      const crackleGain = ctx.createGain();
      const crackleFilter = ctx.createBiquadFilter();

      crackleSource.buffer = crackleBuffer;
      crackleFilter.type = 'bandpass';
      crackleFilter.frequency.value = 1200;
      crackleFilter.Q.value = 0.5;

      crackleSource.connect(crackleFilter);
      crackleFilter.connect(crackleGain);
      crackleGain.connect(masterGain);

      crackleGain.gain.setValueAtTime(0.08, now);

      crackleSource.start(now);
      crackleSource.stop(now + duration + 0.1);

      // === WIND/AIR RUSH ===
      const windLength = Math.floor(ctx.sampleRate * duration);
      const windBuffer = ctx.createBuffer(1, windLength, ctx.sampleRate);
      const windData = windBuffer.getChannelData(0);

      // Pink-ish noise for wind
      let b0 = 0, b1 = 0, b2 = 0, b3 = 0, b4 = 0, b5 = 0, b6 = 0;
      for (let i = 0; i < windLength; i++) {
        const white = Math.random() * 2 - 1;
        b0 = 0.99886 * b0 + white * 0.0555179;
        b1 = 0.99332 * b1 + white * 0.0750759;
        b2 = 0.96900 * b2 + white * 0.1538520;
        b3 = 0.86650 * b3 + white * 0.3104856;
        b4 = 0.55000 * b4 + white * 0.5329522;
        b5 = -0.7616 * b5 - white * 0.0168980;
        windData[i] = (b0 + b1 + b2 + b3 + b4 + b5 + b6 + white * 0.5362) * 0.11;
        b6 = white * 0.115926;
      }

      const windSource = ctx.createBufferSource();
      const windGain = ctx.createGain();
      const windFilter = ctx.createBiquadFilter();

      windSource.buffer = windBuffer;
      windFilter.type = 'bandpass';
      windFilter.frequency.value = 800;
      windFilter.Q.value = 0.3;

      windSource.connect(windFilter);
      windFilter.connect(windGain);
      windGain.connect(masterGain);

      // Wind gets louder at peak
      windGain.gain.setValueAtTime(0.001, now);
      windGain.gain.exponentialRampToValueAtTime(0.06, now + peakTime);
      windGain.gain.exponentialRampToValueAtTime(0.001, now + duration);

      windSource.start(now);
      windSource.stop(now + duration + 0.1);

      // Master volume
      masterGain.gain.setValueAtTime(1.2, now);
    }

    // Toggle badge icon on click
    function initBadgeToggle() {
      const badge = document.getElementById('hero-badge') as HTMLImageElement;
      const shine = document.querySelector('.hero-badge-shine') as HTMLElement;
      if (!badge) return;

      const icons = [
        '/desafios/desafio_bronce_icon.png',
        '/desafios/desafio_bronce_icon_2.png',
        '/desafios/desafio_bronce_icon_4.png'
      ];
      let currentIndex = 1; // Start with icon_2

      badge.addEventListener('click', () => {
        playMotoSound();
        currentIndex = (currentIndex + 1) % icons.length;
        badge.src = icons[currentIndex];
        if (shine) {
          shine.style.maskImage = `url('${icons[currentIndex]}')`;
          shine.style.webkitMaskImage = `url('${icons[currentIndex]}')`;
        }
      });
    }

    // Initialize when DOM is ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', () => {
        initBadgeInteraction();
        initBadgeToggle();
      });
    } else {
      initBadgeInteraction();
      initBadgeToggle();
    }
  </script>

  <!-- Historia Section -->
  <section id="historia" class="py-24 bg-racing-black">
    <div class="container mx-auto px-4 md:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <span class="text-vanilla text-sm font-semibold uppercase tracking-widest mb-4 block">{content.historia.tagline}</span>
          <h2 class="section-title mb-6">{content.historia.title} <span class="text-vanilla">{content.historia.titleAccent}</span></h2>
          <div class="space-y-4 text-racing-silver">
            {content.historia.content.map((paragraph: string) => (
              <p set:html={paragraph}></p>
            ))}
          </div>
        </div>

        <div class="relative">
          <div class="aspect-video bg-racing-gray rounded-2xl overflow-hidden border border-racing-silver/20">
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="text-center">
                <div class="w-20 h-20 bg-racing-green/20 rounded-full flex items-center justify-center mx-auto mb-4">
                  <svg class="w-10 h-10 text-vanilla" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M8 5v14l11-7z"/>
                  </svg>
                </div>
                <p class="text-racing-silver">{content.historia.videoPlaceholder}</p>
              </div>
            </div>
          </div>
          <!-- Decorative elements -->
          <div class="absolute -top-4 -right-4 w-24 h-24 border-2 border-vanilla/30 rounded-2xl -z-10"></div>
          <div class="absolute -bottom-4 -left-4 w-24 h-24 bg-racing-green/10 rounded-2xl -z-10"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Concepto Section -->
  <section class="py-24 bg-racing-gray">
    <div class="container mx-auto px-4 md:px-8">
      <div class="text-center mb-16">
        <span class="text-vanilla text-sm font-semibold uppercase tracking-widest mb-4 block">{content.concepto.tagline}</span>
        <h2 class="section-title">{content.concepto.title} <span class="text-vanilla">{content.concepto.titleAccent}</span>?</h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {content.concepto.cards.map((card: { title: string; description: string; icon: string }) => (
          <div class="card group">
            <div class="w-14 h-14 bg-racing-green/20 rounded-xl flex items-center justify-center mb-6 group-hover:bg-racing-green/30 transition-colors">
              {card.icon === 'money' && (
                <svg class="w-7 h-7 text-vanilla" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              )}
              {card.icon === 'lightning' && (
                <svg class="w-7 h-7 text-vanilla" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                </svg>
              )}
              {card.icon === 'team' && (
                <svg class="w-7 h-7 text-vanilla" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
              )}
              {card.icon === 'shield' && (
                <svg class="w-7 h-7 text-vanilla" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
                </svg>
              )}
              {card.icon === 'book' && (
                <svg class="w-7 h-7 text-vanilla" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                </svg>
              )}
              {card.icon === 'smile' && (
                <svg class="w-7 h-7 text-vanilla" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              )}
              {card.icon === 'calendar' && (
                <svg class="w-7 h-7 text-vanilla" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
              )}
              {card.icon === 'trophy' && (
                <svg class="w-7 h-7 text-vanilla" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6-4a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              )}
            </div>
            <h3 class="text-xl font-bold text-white mb-3">{card.title}</h3>
            <p class="text-racing-silver">{card.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-24 bg-racing-black relative overflow-hidden">
    <!-- Background decoration -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute top-0 left-1/4 w-96 h-96 bg-racing-green rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-vanilla rounded-full blur-3xl"></div>
    </div>

    <div class="container mx-auto px-4 md:px-8 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="section-title mb-6">{content.cta.title} <span class="text-vanilla">{content.cta.titleAccent}</span>?</h2>
        <p class="section-subtitle mx-auto mb-8">{content.cta.subtitle}</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href={content.cta.buttonLink} class="btn-primary">
            {content.cta.button}
          </a>
          <a href={content.cta.buttonSecondaryLink} class="btn-secondary">
            {content.cta.buttonSecondary}
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
