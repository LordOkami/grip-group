---
import Layout from '../../layouts/Layout.astro';
import { getContent } from '../../i18n/utils';

const content = await getContent('en', 'home');
---

<Layout title={content.meta.title} currentPage="home">
  <!-- Hero Section -->
  <section class="relative min-h-[90vh] flex items-center justify-center overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 bg-gradient-racing">
      <div class="absolute inset-0 opacity-10" style="background-image: url('data:image/svg+xml,%3Csvg width=\'60\' height=\'60\' viewBox=\'0 0 60 60\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cg fill=\'none\' fill-rule=\'evenodd\'%3E%3Cg fill=\'%23ffffff\' fill-opacity=\'0.4\'%3E%3Cpath d=\'M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
    </div>

    <!-- Animated Lines -->
    <div class="absolute top-1/4 left-0 w-full h-px bg-gradient-to-r from-transparent via-vanilla/30 to-transparent"></div>
    <div class="absolute top-3/4 left-0 w-full h-px bg-gradient-to-r from-transparent via-vanilla/20 to-transparent"></div>

    <!-- Dust Particles -->
    <div id="particles-container" class="absolute inset-0 pointer-events-none z-10"></div>

    <div class="relative z-20 container mx-auto px-4 md:px-8 text-center">
      <!-- Logo + Presents -->
      <div class="mb-0">
        <img
          src="/logo/logo_text_only.png"
          alt="Grip Club"
          class="h-6 md:h-8 mx-auto invert brightness-200"
        />
        <span class="text-vanilla/80 text-xs md:text-sm uppercase tracking-[0.3em] mt-1 block">presents</span>
      </div>

      <!-- Desafío Bronce Icon with Effects -->
      <div class="hero-badge-container relative mx-auto w-64 md:w-80 lg:w-96 mb-1">
        <div class="hero-badge-glow absolute inset-0 opacity-0 transition-opacity duration-500"></div>
        <img
          id="hero-badge"
          src="/desafios/desafio_bronce_icon_2.png"
          alt="Desafío Bronce 8 Horas 125cc 4T"
          class="hero-badge w-full relative z-10 drop-shadow-2xl transition-all duration-300 ease-out cursor-pointer"
        />
        <div class="hero-badge-shine absolute inset-0 z-20 pointer-events-none opacity-0"></div>
      </div>

      <p class="text-lg md:text-xl text-racing-silver max-w-3xl mx-auto mb-6">
        {content.hero.subtitle}<br>
        <span class="text-white font-semibold">{content.hero.subtitleBold}</span>
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a href={content.hero.ctaLink} class="btn-primary">
          {content.hero.cta}
        </a>
        <a href={content.hero.ctaSecondaryLink} class="btn-secondary">
          {content.hero.ctaSecondary}
        </a>
      </div>

      <!-- Stats -->
      <div class="grid grid-cols-3 gap-4 md:gap-8 mt-12 max-w-2xl mx-auto">
        {content.hero.stats.map((stat: { value: string; label: string }) => (
          <div class="text-center">
            <div class="text-4xl md:text-5xl font-bold text-vanilla" style="font-family: 'Bebas Neue', sans-serif;">{stat.value}</div>
            <div class="text-racing-silver text-sm uppercase tracking-wider">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
      <svg class="w-6 h-6 text-racing-silver" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
      </svg>
    </div>
  </section>

  <style>
    .hero-badge-container:hover .hero-badge {
      transform: scale(1.05) translateY(-5px);
      filter: drop-shadow(0 25px 50px rgba(205, 127, 50, 0.4));
    }

    .hero-badge-container:hover .hero-badge-glow {
      opacity: 1;
    }

    .hero-badge-glow {
      background: radial-gradient(ellipse at center, rgba(205, 127, 50, 0.3) 0%, transparent 70%);
      filter: blur(40px);
      transform: scale(1.5);
    }

    .hero-badge-shine {
      background: linear-gradient(
        105deg,
        transparent 40%,
        rgba(255, 255, 255, 0.4) 45%,
        rgba(255, 255, 255, 0.6) 50%,
        rgba(255, 255, 255, 0.4) 55%,
        transparent 60%
      );
      background-size: 200% 100%;
      background-position: 200% 0;
      -webkit-mask-image: url('/desafios/desafio_bronce_icon_2.png');
      mask-image: url('/desafios/desafio_bronce_icon_2.png');
      -webkit-mask-size: contain;
      mask-size: contain;
      -webkit-mask-repeat: no-repeat;
      mask-repeat: no-repeat;
      -webkit-mask-position: center;
      mask-position: center;
    }

    .hero-badge-container:hover .hero-badge-shine {
      opacity: 1;
      animation: shine 1.5s ease-in-out infinite;
    }

    @keyframes shine {
      0% { background-position: 200% 0; }
      50% { background-position: -200% 0; }
      100% { background-position: -200% 0; }
    }

    /* Dust particles */
    .dust-particle {
      position: absolute;
      width: 4px;
      height: 4px;
      background: rgba(255, 215, 150, 0.6);
      border-radius: 50%;
      pointer-events: none;
      animation: float-dust linear infinite;
      box-shadow: 0 0 6px rgba(255, 215, 150, 0.4);
    }

    @keyframes float-dust {
      0% {
        transform: translateY(100vh) translateX(0) rotate(0deg);
        opacity: 0;
      }
      10% {
        opacity: 0.8;
      }
      50% {
        transform: translateY(50vh) translateX(20px) rotate(360deg);
      }
      90% {
        opacity: 0.8;
      }
      100% {
        transform: translateY(-100px) translateX(-10px) rotate(720deg);
        opacity: 0;
      }
    }
  </style>

  <script>
    // Create dust particles
    function createDustParticles() {
      const container = document.getElementById('particles-container');
      if (!container) return;

      const particleCount = 40;

      for (let i = 0; i < particleCount; i++) {
        const particle = document.createElement('div');
        particle.className = 'dust-particle';

        // Random properties
        const size = Math.random() * 4 + 2;
        const left = Math.random() * 100;
        const delay = Math.random() * 15;
        const duration = Math.random() * 10 + 15;

        particle.style.cssText = `
          left: ${left}%;
          width: ${size}px;
          height: ${size}px;
          animation-delay: -${delay}s;
          animation-duration: ${duration}s;
        `;

        container.appendChild(particle);
      }
    }

    // Mouse tracking for badge
    function initBadgeInteraction() {
      const badge = document.getElementById('hero-badge');
      if (!badge) return;

      const container = badge.parentElement;

      container?.addEventListener('mousemove', (e) => {
        const rect = container.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const y = e.clientY - rect.top;
        const centerX = rect.width / 2;
        const centerY = rect.height / 2;

        const rotateX = (y - centerY) / 20;
        const rotateY = (centerX - x) / 20;

        badge.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) scale(1.05) translateY(-5px)`;
      });

      container?.addEventListener('mouseleave', () => {
        badge.style.transform = 'perspective(1000px) rotateX(0) rotateY(0) scale(1) translateY(0)';
      });
    }

    // Realistic motorcycle pass-by sound effect using Web Audio API
    function playMotoSound() {
      const ctx = new (window.AudioContext || (window as any).webkitAudioContext)();
      const now = ctx.currentTime;
      const duration = 1.8;

      // Master output with stereo panner
      const masterGain = ctx.createGain();
      const panner = ctx.createStereoPanner();
      const compressor = ctx.createDynamicsCompressor();

      masterGain.connect(compressor);
      compressor.connect(panner);
      panner.connect(ctx.destination);

      // Doppler pan from left to right
      panner.pan.setValueAtTime(-0.9, now);
      panner.pan.linearRampToValueAtTime(0, now + duration * 0.45);
      panner.pan.linearRampToValueAtTime(0.9, now + duration);

      // Base frequencies for 125cc single cylinder engine (~8000-12000 RPM)
      const baseFreq = 65; // Fundamental firing frequency
      const peakFreq = 140; // Peak at closest point
      const endFreq = 55; // Lower as it moves away

      // Create multiple harmonics for realistic engine sound
      const harmonics = [1, 2, 3, 4, 6, 8];
      const harmonicGains = [0.4, 0.3, 0.2, 0.15, 0.1, 0.05];

      harmonics.forEach((mult, i) => {
        const osc = ctx.createOscillator();
        const oscGain = ctx.createGain();
        const filter = ctx.createBiquadFilter();

        osc.type = i < 2 ? 'sawtooth' : 'square';
        filter.type = 'lowpass';
        filter.frequency.value = 2000 - (i * 200);
        filter.Q.value = 1;

        osc.connect(filter);
        filter.connect(oscGain);
        oscGain.connect(masterGain);

        // Doppler frequency shift
        osc.frequency.setValueAtTime(baseFreq * mult, now);
        osc.frequency.exponentialRampToValueAtTime(peakFreq * mult, now + duration * 0.4);
        osc.frequency.exponentialRampToValueAtTime(endFreq * mult, now + duration);

        // Volume envelope with proximity effect
        const gain = harmonicGains[i] * 0.12;
        oscGain.gain.setValueAtTime(0, now);
        oscGain.gain.linearRampToValueAtTime(gain * 0.3, now + 0.05);
        oscGain.gain.linearRampToValueAtTime(gain * 0.6, now + duration * 0.3);
        oscGain.gain.linearRampToValueAtTime(gain, now + duration * 0.45);
        oscGain.gain.linearRampToValueAtTime(gain * 0.7, now + duration * 0.6);
        oscGain.gain.linearRampToValueAtTime(0, now + duration);

        osc.start(now);
        osc.stop(now + duration);
      });

      // Exhaust rumble - low frequency
      const rumbleOsc = ctx.createOscillator();
      const rumbleGain = ctx.createGain();
      const rumbleFilter = ctx.createBiquadFilter();

      rumbleOsc.type = 'triangle';
      rumbleFilter.type = 'lowpass';
      rumbleFilter.frequency.value = 150;

      rumbleOsc.connect(rumbleFilter);
      rumbleFilter.connect(rumbleGain);
      rumbleGain.connect(masterGain);

      rumbleOsc.frequency.setValueAtTime(30, now);
      rumbleOsc.frequency.linearRampToValueAtTime(55, now + duration * 0.45);
      rumbleOsc.frequency.linearRampToValueAtTime(25, now + duration);

      rumbleGain.gain.setValueAtTime(0, now);
      rumbleGain.gain.linearRampToValueAtTime(0.15, now + duration * 0.3);
      rumbleGain.gain.linearRampToValueAtTime(0.25, now + duration * 0.45);
      rumbleGain.gain.linearRampToValueAtTime(0, now + duration);

      rumbleOsc.start(now);
      rumbleOsc.stop(now + duration);

      // Exhaust noise/crackle
      const noiseLength = ctx.sampleRate * duration;
      const noiseBuffer = ctx.createBuffer(1, noiseLength, ctx.sampleRate);
      const noiseData = noiseBuffer.getChannelData(0);

      // Create shaped noise with occasional pops
      for (let i = 0; i < noiseLength; i++) {
        const t = i / ctx.sampleRate;
        const envelope = Math.sin(Math.PI * t / duration);
        const pop = Math.random() > 0.997 ? (Math.random() * 2 - 1) * 3 : 0;
        noiseData[i] = ((Math.random() * 2 - 1) * 0.3 + pop) * envelope;
      }

      const noiseSource = ctx.createBufferSource();
      const noiseGain = ctx.createGain();
      const noiseFilter = ctx.createBiquadFilter();
      const noiseFilter2 = ctx.createBiquadFilter();

      noiseSource.buffer = noiseBuffer;
      noiseFilter.type = 'bandpass';
      noiseFilter.frequency.value = 400;
      noiseFilter.Q.value = 0.5;
      noiseFilter2.type = 'highpass';
      noiseFilter2.frequency.value = 100;

      noiseSource.connect(noiseFilter);
      noiseFilter.connect(noiseFilter2);
      noiseFilter2.connect(noiseGain);
      noiseGain.connect(masterGain);

      noiseGain.gain.setValueAtTime(0, now);
      noiseGain.gain.linearRampToValueAtTime(0.08, now + duration * 0.3);
      noiseGain.gain.linearRampToValueAtTime(0.15, now + duration * 0.45);
      noiseGain.gain.linearRampToValueAtTime(0.1, now + duration * 0.7);
      noiseGain.gain.linearRampToValueAtTime(0, now + duration);

      noiseSource.start(now);
      noiseSource.stop(now + duration);

      // Master volume envelope
      masterGain.gain.setValueAtTime(0.8, now);
    }

    // Toggle badge icon on click
    function initBadgeToggle() {
      const badge = document.getElementById('hero-badge') as HTMLImageElement;
      const shine = document.querySelector('.hero-badge-shine') as HTMLElement;
      if (!badge) return;

      const icons = [
        '/desafios/desafio_bronce_icon.png',
        '/desafios/desafio_bronce_icon_2.png'
      ];
      let currentIndex = 1; // Start with icon_2

      badge.addEventListener('click', () => {
        playMotoSound();
        currentIndex = currentIndex === 0 ? 1 : 0;
        badge.src = icons[currentIndex];
        if (shine) {
          shine.style.maskImage = `url('${icons[currentIndex]}')`;
          shine.style.webkitMaskImage = `url('${icons[currentIndex]}')`;
        }
      });
    }

    // Initialize
    createDustParticles();
    initBadgeInteraction();
    initBadgeToggle();
  </script>

  <!-- Historia Section -->
  <section id="historia" class="py-24 bg-racing-black">
    <div class="container mx-auto px-4 md:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <span class="text-vanilla text-sm font-semibold uppercase tracking-widest mb-4 block">{content.historia.tagline}</span>
          <h2 class="section-title mb-6">{content.historia.title} <span class="text-vanilla">{content.historia.titleAccent}</span></h2>
          <div class="space-y-4 text-racing-silver">
            {content.historia.content.map((paragraph: string) => (
              <p set:html={paragraph}></p>
            ))}
          </div>
        </div>

        <div class="relative">
          <div class="aspect-video bg-racing-gray rounded-2xl overflow-hidden border border-racing-silver/20">
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="text-center">
                <div class="w-20 h-20 bg-racing-green/20 rounded-full flex items-center justify-center mx-auto mb-4">
                  <svg class="w-10 h-10 text-vanilla" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M8 5v14l11-7z"/>
                  </svg>
                </div>
                <p class="text-racing-silver">{content.historia.videoPlaceholder}</p>
              </div>
            </div>
          </div>
          <!-- Decorative elements -->
          <div class="absolute -top-4 -right-4 w-24 h-24 border-2 border-vanilla/30 rounded-2xl -z-10"></div>
          <div class="absolute -bottom-4 -left-4 w-24 h-24 bg-racing-green/10 rounded-2xl -z-10"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Concepto Section -->
  <section class="py-24 bg-racing-gray">
    <div class="container mx-auto px-4 md:px-8">
      <div class="text-center mb-16">
        <span class="text-vanilla text-sm font-semibold uppercase tracking-widest mb-4 block">{content.concepto.tagline}</span>
        <h2 class="section-title">{content.concepto.title} <span class="text-vanilla">{content.concepto.titleAccent}</span>?</h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {content.concepto.cards.map((card: { title: string; description: string; icon: string }) => (
          <div class="card group">
            <div class="w-14 h-14 bg-racing-green/20 rounded-xl flex items-center justify-center mb-6 group-hover:bg-racing-green/30 transition-colors">
              {card.icon === 'money' && (
                <svg class="w-7 h-7 text-vanilla" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              )}
              {card.icon === 'lightning' && (
                <svg class="w-7 h-7 text-vanilla" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                </svg>
              )}
              {card.icon === 'team' && (
                <svg class="w-7 h-7 text-vanilla" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
              )}
              {card.icon === 'shield' && (
                <svg class="w-7 h-7 text-vanilla" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
                </svg>
              )}
              {card.icon === 'book' && (
                <svg class="w-7 h-7 text-vanilla" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                </svg>
              )}
              {card.icon === 'smile' && (
                <svg class="w-7 h-7 text-vanilla" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              )}
            </div>
            <h3 class="text-xl font-bold text-white mb-3">{card.title}</h3>
            <p class="text-racing-silver">{card.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-24 bg-racing-black relative overflow-hidden">
    <!-- Background decoration -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute top-0 left-1/4 w-96 h-96 bg-racing-green rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-vanilla rounded-full blur-3xl"></div>
    </div>

    <div class="container mx-auto px-4 md:px-8 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="section-title mb-6">{content.cta.title} <span class="text-vanilla">{content.cta.titleAccent}</span>?</h2>
        <p class="section-subtitle mx-auto mb-8">{content.cta.subtitle}</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href={content.cta.buttonLink} class="btn-primary">
            {content.cta.button}
          </a>
          <a href={content.cta.buttonSecondaryLink} class="btn-secondary">
            {content.cta.buttonSecondary}
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
