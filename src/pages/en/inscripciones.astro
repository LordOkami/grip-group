---
import Layout from '../../layouts/Layout.astro';
import { getContent } from '../../i18n/utils';

const content = await getContent('en', 'inscripciones');
---

<Layout title={content.meta.title} currentPage="inscripciones">
  <!-- Hero Section -->
  <section class="relative py-24 md:py-32 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-racing"></div>
    <div class="absolute inset-0 opacity-5">
      <div class="absolute bottom-0 left-1/4 w-96 h-96 bg-racing-green rounded-full blur-3xl"></div>
    </div>

    <div class="container mx-auto px-4 md:px-8 relative z-10">
      <div class="max-w-3xl">
        <span class="text-vanilla text-sm font-semibold uppercase tracking-widest mb-4 block">{content.hero.tagline}</span>
        <h1 class="section-title mb-6"><span class="text-vanilla">{content.hero.title}</span></h1>
        <p class="section-subtitle">{content.hero.subtitle}</p>
      </div>
    </div>
  </section>

  <!-- Info Cards Section -->
  <section class="py-20 bg-racing-black">
    <div class="container mx-auto px-4 md:px-8">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
        {content.infoCards.map((card: { icon: string; title: string; value: string; subtitle: string }) => (
          <div class="card text-center">
            <div class="w-16 h-16 bg-racing-green/20 rounded-full flex items-center justify-center mx-auto mb-4">
              {card.icon === 'calendar' && (
                <svg class="w-8 h-8 text-vanilla" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
              )}
              {card.icon === 'location' && (
                <svg class="w-8 h-8 text-vanilla" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
              )}
              {card.icon === 'team' && (
                <svg class="w-8 h-8 text-vanilla" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
              )}
            </div>
            <h3 class="text-xl font-bold text-white mb-2">{card.title}</h3>
            <p class="text-vanilla text-2xl font-bold mb-2" style="font-family: 'Bebas Neue', sans-serif;">{card.value}</p>
            <p class="text-racing-silver text-sm">{card.subtitle}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Calendario Section -->
  <section class="py-20 bg-racing-gray">
    <div class="container mx-auto px-4 md:px-8">
      <div class="text-center mb-16">
        <span class="text-vanilla text-sm font-semibold uppercase tracking-widest mb-4 block">{content.calendar.tagline}</span>
        <h2 class="section-title"><span class="text-vanilla">{content.calendar.titleAccent}</span> {content.calendar.title}</h2>
      </div>

      <div class="max-w-3xl mx-auto">
        <div class="relative">
          <div class="absolute left-4 md:left-1/2 top-0 bottom-0 w-px bg-racing-silver/20 md:-translate-x-px"></div>

          <div class="space-y-8">
            {content.calendar.items.map((item: { status: string; label: string; title: string; description: string }, index: number) => (
              <div class="relative flex items-center gap-6 md:gap-0">
                <div class={`w-8 h-8 rounded-full flex items-center justify-center shrink-0 z-10 md:absolute md:left-1/2 md:-translate-x-1/2 ${item.status === 'active' ? 'bg-racing-green' : 'bg-racing-gray border-2 border-racing-silver/30'}`}>
                  {item.status === 'active' ? (
                    <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                    </svg>
                  ) : (
                    <span class="text-racing-silver text-xs font-bold">{index + 1}</span>
                  )}
                </div>
                <div class={`card flex-1 md:w-5/12 ${index % 2 === 0 ? 'md:mr-auto md:pr-8' : 'md:ml-auto md:pl-8'}`}>
                  <span class={`text-sm font-semibold ${item.status === 'active' ? 'text-vanilla' : 'text-racing-silver'}`}>{item.label}</span>
                  <h3 class="text-lg font-bold text-white">{item.title}</h3>
                  <p class="text-racing-silver text-sm">{item.description}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Precios Section -->
  <section class="py-20 bg-racing-black">
    <div class="container mx-auto px-4 md:px-8">
      <div class="text-center mb-16">
        <span class="text-vanilla text-sm font-semibold uppercase tracking-widest mb-4 block">{content.pricing.tagline}</span>
        <h2 class="section-title">{content.pricing.title} <span class="text-vanilla">{content.pricing.titleAccent}</span></h2>
      </div>

      <div class="max-w-lg mx-auto">
        <div class="card relative overflow-hidden">
          <div class="absolute top-0 right-0 bg-racing-green text-white text-xs font-bold px-4 py-2 rounded-bl-xl">
            {content.pricing.badge}
          </div>

          <div class="text-center pt-8">
            <h3 class="text-2xl font-bold text-white mb-4">{content.pricing.cardTitle}</h3>
            <div class="mb-6">
              <span class="text-racing-silver text-lg line-through">{content.pricing.priceNote}</span>
              <div class="text-5xl font-bold text-vanilla mt-2" style="font-family: 'Bebas Neue', sans-serif;">
                {content.pricing.priceValue}
              </div>
            </div>

            <ul class="space-y-3 text-left mb-8">
              {content.pricing.features.map((feature: string) => (
                <li class="flex items-center gap-3 text-racing-silver">
                  <svg class="w-5 h-5 text-vanilla shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>

            <a href="#registro" class="btn-primary w-full block text-center">
              {content.pricing.cta}
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Team Registration Section -->
  <section id="registro" class="py-20 bg-racing-gray scroll-mt-24">
    <div class="container mx-auto px-4 md:px-8">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <span class="text-vanilla text-sm font-semibold uppercase tracking-widest mb-4 block">{content.registration.tagline}</span>
          <h2 class="section-title">{content.registration.title} <span class="text-vanilla">{content.registration.titleAccent}</span></h2>
          <p class="section-subtitle mx-auto mt-4">{content.registration.subtitle}</p>
        </div>

        <!-- Team Registration CTA -->
        <div class="card mb-12 border-racing-green/30 bg-racing-green/5">
          <div class="flex flex-col md:flex-row items-center gap-6">
            <div class="w-20 h-20 bg-racing-green/20 rounded-2xl flex items-center justify-center shrink-0">
              <svg class="w-10 h-10 text-racing-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
            </div>
            <div class="flex-1 text-center md:text-left">
              <h3 class="text-xl font-bold text-white mb-2">{content.registration.teamRegistration.title}</h3>
              <p class="text-racing-silver mb-4">{content.registration.teamRegistration.description}</p>
              <div class="flex flex-wrap gap-3 justify-center md:justify-start">
                <a href={content.registration.teamRegistration.signupLink} class="btn-primary inline-flex items-center gap-2">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
                  </svg>
                  {content.registration.teamRegistration.createAccount}
                </a>
                <a href={content.registration.teamRegistration.loginLink} class="px-6 py-3 border border-racing-silver/30 rounded-lg text-white hover:border-racing-silver/50 transition-colors inline-flex items-center gap-2">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"/>
                  </svg>
                  {content.registration.teamRegistration.hasAccount}
                </a>
              </div>
            </div>
          </div>
        </div>

        <div class="relative mb-12">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-racing-silver/20"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-4 bg-racing-gray text-racing-silver">{content.registration.separator}</span>
          </div>
        </div>

        <div class="max-w-2xl mx-auto">
          <div class="text-center mb-8">
            <h3 class="text-lg font-bold text-white mb-2">{content.registration.quickForm.title}</h3>
            <p class="text-racing-silver text-sm">{content.registration.quickForm.subtitle}</p>
          </div>

          <!-- Netlify Form -->
          <form
            name={content.registration.quickForm.formName}
            method="POST"
            data-netlify="true"
            netlify-honeypot="bot-field"
            action={content.registration.quickForm.successPage}
            class="card"
          >
            <p class="hidden">
              <label>Don't fill if you're human: <input name="bot-field" /></label>
            </p>
            <input type="hidden" name="form-name" value={content.registration.quickForm.formName} />

            <div class="space-y-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="nombre" class="label-field">{content.registration.quickForm.fields.nombre.label}</label>
                  <input type="text" id="nombre" name="nombre" required class="input-field" placeholder={content.registration.quickForm.fields.nombre.placeholder} />
                </div>
                <div>
                  <label for="apellidos" class="label-field">{content.registration.quickForm.fields.apellidos.label}</label>
                  <input type="text" id="apellidos" name="apellidos" required class="input-field" placeholder={content.registration.quickForm.fields.apellidos.placeholder} />
                </div>
              </div>

              <div>
                <label for="email" class="label-field">{content.registration.quickForm.fields.email.label}</label>
                <input type="email" id="email" name="email" required class="input-field" placeholder={content.registration.quickForm.fields.email.placeholder} />
              </div>

              <div>
                <label for="telefono" class="label-field">{content.registration.quickForm.fields.telefono.label}</label>
                <input type="tel" id="telefono" name="telefono" required class="input-field" placeholder={content.registration.quickForm.fields.telefono.placeholder} />
              </div>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="localidad" class="label-field">{content.registration.quickForm.fields.localidad.label}</label>
                  <input type="text" id="localidad" name="localidad" required class="input-field" placeholder={content.registration.quickForm.fields.localidad.placeholder} />
                </div>
                <div>
                  <label for="codigo_postal" class="label-field">{content.registration.quickForm.fields.codigoPostal.label}</label>
                  <input type="text" id="codigo_postal" name="codigo_postal" required class="input-field" placeholder={content.registration.quickForm.fields.codigoPostal.placeholder} />
                </div>
              </div>

              <div>
                <label for="pais" class="label-field">{content.registration.quickForm.fields.pais.label}</label>
                <input type="text" id="pais" name="pais" required class="input-field" placeholder={content.registration.quickForm.fields.pais.placeholder} />
              </div>

              <div>
                <label for="moto" class="label-field">{content.registration.quickForm.fields.moto.label}</label>
                <input type="text" id="moto" name="moto" class="input-field" placeholder={content.registration.quickForm.fields.moto.placeholder} />
              </div>

              <div>
                <label for="experiencia" class="label-field">{content.registration.quickForm.fields.experiencia.label}</label>
                <select id="experiencia" name="experiencia" class="input-field">
                  <option value="">{content.registration.quickForm.fields.experiencia.placeholder}</option>
                  {content.registration.quickForm.fields.experiencia.options.map((opt: { value: string; label: string }) => (
                    <option value={opt.value}>{opt.label}</option>
                  ))}
                </select>
              </div>

              <div>
                <label for="mensaje" class="label-field">{content.registration.quickForm.fields.mensaje.label}</label>
                <textarea id="mensaje" name="mensaje" rows="4" class="input-field resize-none" placeholder={content.registration.quickForm.fields.mensaje.placeholder}></textarea>
              </div>

              <div class="flex items-start gap-3">
                <input type="checkbox" id="rgpd" name="rgpd" required class="mt-1 w-5 h-5 rounded border-racing-silver/30 bg-racing-black text-vanilla focus:ring-racing-green focus:ring-2" />
                <label for="rgpd" class="text-racing-silver text-sm">{content.registration.quickForm.fields.rgpd}</label>
              </div>

              <button type="submit" class="btn-primary w-full">{content.registration.quickForm.submit}</button>
            </div>
          </form>

          <div class="mt-8 p-6 bg-racing-black rounded-2xl border border-racing-silver/10">
            <div class="flex items-start gap-4">
              <div class="w-10 h-10 bg-racing-green/20 rounded-lg flex items-center justify-center shrink-0">
                <svg class="w-6 h-6 text-vanilla" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div>
                <h4 class="text-white font-bold mb-2">{content.registration.nextSteps.title}</h4>
                <p class="text-racing-silver text-sm">{content.registration.nextSteps.description}</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-20 bg-racing-black">
    <div class="container mx-auto px-4 md:px-8">
      <div class="text-center mb-16">
        <span class="text-vanilla text-sm font-semibold uppercase tracking-widest mb-4 block">{content.faq.tagline}</span>
        <h2 class="section-title">{content.faq.title} <span class="text-vanilla">{content.faq.titleAccent}</span></h2>
      </div>

      <div class="max-w-3xl mx-auto space-y-4">
        {content.faq.items.map((item: { question: string; answer: string }) => (
          <details class="card group">
            <summary class="flex items-center justify-between cursor-pointer list-none">
              <span class="text-white font-bold">{item.question}</span>
              <svg class="w-5 h-5 text-vanilla transform group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
              </svg>
            </summary>
            <p class="mt-4 text-racing-silver">{item.answer}</p>
          </details>
        ))}
      </div>
    </div>
  </section>

  <!-- Contact CTA -->
  <section class="py-20 bg-racing-gray">
    <div class="container mx-auto px-4 md:px-8">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="section-title mb-6">{content.contact.title} <span class="text-vanilla">{content.contact.titleAccent}</span>?</h2>
        <p class="section-subtitle mx-auto mb-8">{content.contact.subtitle}</p>
        <a href={`mailto:${content.contact.email}`} class="btn-primary inline-flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
          {content.contact.cta}
        </a>
      </div>
    </div>
  </section>
</Layout>
