---
import Layout from '../../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={t('tienda.title')} currentPage="tienda">
  <!-- Hero Section -->
  <section class="relative min-h-[80vh] flex items-center justify-center overflow-hidden">
    <div class="absolute inset-0 bg-gradient-racing"></div>
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-racing-green rounded-full blur-3xl"></div>
      <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-vanilla rounded-full blur-3xl"></div>
    </div>

    <div class="relative z-10 container mx-auto px-4 md:px-8 text-center">
      <!-- Icon -->
      <div class="w-24 h-24 bg-racing-green/20 rounded-full flex items-center justify-center mx-auto mb-8">
        <svg class="w-12 h-12 text-vanilla" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
        </svg>
      </div>

      <!-- Title -->
      <span class="text-vanilla text-sm font-semibold uppercase tracking-widest mb-4 block">Grip Club</span>
      <h1 class="text-5xl md:text-7xl lg:text-8xl font-bold mb-6" style="font-family: 'Bebas Neue', sans-serif;">
        {t('tienda.title')}
      </h1>
      <p class="text-xl md:text-2xl text-racing-silver max-w-2xl mx-auto mb-12">
        {t('tienda.subtitle')}
      </p>

      <!-- Coming Soon Badge -->
      <div class="inline-flex items-center gap-3 bg-racing-gray border border-racing-silver/20 rounded-full px-6 py-3">
        <div class="w-3 h-3 bg-vanilla rounded-full animate-pulse"></div>
        <span class="text-vanilla font-bold uppercase tracking-wider">{t('tienda.comingSoon')}</span>
      </div>

      <!-- Description -->
      <p class="text-racing-silver mt-8 max-w-xl mx-auto">
        {lang === 'es'
          ? 'Estamos preparando una coleccion exclusiva de merchandising oficial Grip Club. Muy pronto podras conseguir camisetas, gorras y mucho mas.'
          : 'We are preparing an exclusive collection of official Grip Club merchandise. Very soon you will be able to get t-shirts, caps and much more.'}
      </p>
    </div>
  </section>

  <!-- Preview Section -->
  <section class="py-20 bg-racing-gray">
    <div class="container mx-auto px-4 md:px-8">
      <div class="text-center mb-16">
        <span class="text-vanilla text-sm font-semibold uppercase tracking-widest mb-4 block">
          {lang === 'es' ? 'Avance' : 'Preview'}
        </span>
        <h2 class="section-title">
          {lang === 'es' ? 'Lo que viene' : 'What\'s coming'}
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto">
        <!-- Category 1 -->
        <div class="card text-center opacity-60">
          <div class="aspect-square bg-racing-black/50 rounded-xl mb-6 flex items-center justify-center">
            <svg class="w-16 h-16 text-racing-silver/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M6 2v20l6-4 6 4V2a2 2 0 00-2-2H8a2 2 0 00-2 2z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-2">{t('tienda.category.camisetas')}</h3>
          <p class="text-racing-silver text-sm">
            {lang === 'es' ? 'Camisetas, sudaderas y polos oficiales' : 'Official t-shirts, hoodies and polos'}
          </p>
        </div>

        <!-- Category 2 -->
        <div class="card text-center opacity-60">
          <div class="aspect-square bg-racing-black/50 rounded-xl mb-6 flex items-center justify-center">
            <svg class="w-16 h-16 text-racing-silver/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-2">{t('tienda.category.gorras')}</h3>
          <p class="text-racing-silver text-sm">
            {lang === 'es' ? 'Gorras y viseras con logo bordado' : 'Caps and visors with embroidered logo'}
          </p>
        </div>

        <!-- Category 3 -->
        <div class="card text-center opacity-60">
          <div class="aspect-square bg-racing-black/50 rounded-xl mb-6 flex items-center justify-center">
            <svg class="w-16 h-16 text-racing-silver/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-2">{t('tienda.category.accesorios')}</h3>
          <p class="text-racing-silver text-sm">
            {lang === 'es' ? 'Llaveros, pegatinas y mas' : 'Keychains, stickers and more'}
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Notification Section -->
  <section class="py-20 bg-racing-black">
    <div class="container mx-auto px-4 md:px-8">
      <div class="max-w-2xl mx-auto text-center">
        <div class="w-16 h-16 bg-racing-green/20 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-8 h-8 text-vanilla" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
          </svg>
        </div>
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4" style="font-family: 'Bebas Neue', sans-serif;">
          {lang === 'es' ? 'Se el primero en enterarte' : 'Be the first to know'}
        </h2>
        <p class="text-racing-silver mb-8">
          {lang === 'es'
            ? 'Siguenos en redes sociales para conocer cuando este disponible la tienda y las ofertas de lanzamiento.'
            : 'Follow us on social media to find out when the store is available and launch offers.'}
        </p>
        <div class="flex justify-center gap-4">
          <a href="#" class="w-12 h-12 bg-racing-gray rounded-lg flex items-center justify-center text-racing-silver hover:text-vanilla hover:bg-racing-green/20 transition-colors">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
