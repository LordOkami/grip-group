---
import DashboardLayout from '../../../layouts/DashboardLayout.astro';
import { getLangFromUrl, useTranslations, useTranslatedPath } from '../../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
---

<DashboardLayout title={t('dashboard.staff')} currentSection="staff">
  <div class="max-w-4xl mx-auto">
    <div class="flex items-center justify-between mb-8">
      <div>
        <h1 class="text-3xl font-bold text-white" style="font-family: 'Bebas Neue', sans-serif;">
          {t('dashboard.staff')}
        </h1>
        <p class="text-racing-silver mt-1">{t('dashboard.maxStaff')}</p>
      </div>
      <button id="add-staff-btn" class="btn-primary flex items-center gap-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
        </svg>
        {t('dashboard.addStaff')}
      </button>
    </div>

    <!-- Loading State -->
    <div id="loading-state" class="bg-racing-gray rounded-xl p-8 border border-racing-silver/10 flex items-center justify-center">
      <svg class="animate-spin w-8 h-8 text-racing-green" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
    </div>

    <!-- No Team Message -->
    <div id="no-team-state" class="hidden bg-racing-gray rounded-xl p-8 border border-racing-silver/10 text-center">
      <p class="text-racing-silver">{t('dashboard.noTeam')}</p>
      <a href={translatePath('/dashboard/equipo')} class="btn-primary inline-block mt-4">{t('dashboard.createTeam')}</a>
    </div>

    <!-- Staff List -->
    <div id="staff-list" class="hidden space-y-4">
      <!-- Staff will be inserted here -->
    </div>

    <!-- Empty State -->
    <div id="empty-state" class="hidden bg-racing-gray rounded-xl p-8 border border-racing-silver/10 text-center">
      <div class="w-16 h-16 bg-racing-green/20 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-8 h-8 text-racing-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
      </div>
      <p class="text-racing-silver mb-4">No hay miembros de staff registrados</p>
      <button id="add-first-staff-btn" class="btn-primary inline-flex items-center gap-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
        </svg>
        {t('dashboard.addStaff')}
      </button>
    </div>

    <!-- Staff Modal -->
    <div id="staff-modal" class="hidden fixed inset-0 z-50 overflow-y-auto">
      <div class="min-h-screen px-4 flex items-center justify-center">
        <div class="fixed inset-0 bg-black/70" id="modal-backdrop"></div>

        <div class="relative bg-racing-gray rounded-xl max-w-lg w-full p-6 border border-racing-silver/10">
          <div class="flex items-center justify-between mb-6">
            <h2 id="modal-title" class="text-xl font-bold text-white">{t('dashboard.addStaff')}</h2>
            <button id="close-modal-btn" class="text-racing-silver hover:text-white">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </button>
          </div>

          <form id="staff-form" class="space-y-4">
            <input type="hidden" id="staff-id">

            <div>
              <label for="name" class="block text-sm font-medium text-racing-silver mb-2">{t('form.staffName')} *</label>
              <input type="text" id="name" name="name" required
                class="w-full px-4 py-3 bg-racing-black border border-racing-silver/20 rounded-lg text-white focus:border-racing-green focus:ring-1 focus:ring-racing-green outline-none transition-colors">
            </div>

            <div class="grid grid-cols-2 gap-4">
              <div>
                <label for="dni" class="block text-sm font-medium text-racing-silver mb-2">{t('form.staffDni')}</label>
                <input type="text" id="dni" name="dni"
                  class="w-full px-4 py-3 bg-racing-black border border-racing-silver/20 rounded-lg text-white focus:border-racing-green focus:ring-1 focus:ring-racing-green outline-none transition-colors">
              </div>
              <div>
                <label for="phone" class="block text-sm font-medium text-racing-silver mb-2">{t('form.staffPhone')}</label>
                <input type="tel" id="phone" name="phone"
                  class="w-full px-4 py-3 bg-racing-black border border-racing-silver/20 rounded-lg text-white focus:border-racing-green focus:ring-1 focus:ring-racing-green outline-none transition-colors">
              </div>
            </div>

            <div>
              <label for="role" class="block text-sm font-medium text-racing-silver mb-2">{t('form.staffRole')} *</label>
              <select id="role" name="role" required
                class="w-full px-4 py-3 bg-racing-black border border-racing-silver/20 rounded-lg text-white focus:border-racing-green focus:ring-1 focus:ring-racing-green outline-none transition-colors">
                <option value="mechanic">{t('form.staffRole.mechanic')}</option>
                <option value="coordinator">{t('form.staffRole.coordinator')}</option>
                <option value="support">{t('form.staffRole.support')}</option>
              </select>
            </div>

            <!-- Error message -->
            <div id="modal-error" class="hidden p-3 bg-red-900/30 border border-red-500/50 rounded-lg text-red-300 text-sm"></div>

            <div class="flex gap-4 pt-4">
              <button type="submit" id="submit-staff-btn"
                class="flex-1 btn-primary py-3 flex items-center justify-center gap-2">
                {t('dashboard.save')}
              </button>
              <button type="button" id="cancel-modal-btn"
                class="px-6 py-3 border border-racing-silver/20 rounded-lg text-racing-silver hover:text-white transition-colors">
                {t('dashboard.cancel')}
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script>
    import { fetchWithAuth } from '../../../lib/firebase-auth';

    const lang = document.documentElement.lang || 'es';
    const MAX_STAFF = 4;

    // Elements
    const loadingState = document.getElementById('loading-state');
    const noTeamState = document.getElementById('no-team-state');
    const staffList = document.getElementById('staff-list');
    const emptyState = document.getElementById('empty-state');
    const addStaffBtn = document.getElementById('add-staff-btn');
    const addFirstStaffBtn = document.getElementById('add-first-staff-btn');
    const staffModal = document.getElementById('staff-modal');
    const modalBackdrop = document.getElementById('modal-backdrop');
    const closeModalBtn = document.getElementById('close-modal-btn');
    const cancelModalBtn = document.getElementById('cancel-modal-btn');
    const staffForm = document.getElementById('staff-form') as HTMLFormElement;
    const modalTitle = document.getElementById('modal-title');
    const modalError = document.getElementById('modal-error');
    const staffIdInput = document.getElementById('staff-id') as HTMLInputElement;

    let currentStaff: any[] = [];

    const roles: Record<string, string> = {
      mechanic: lang === 'en' ? 'Mechanic' : 'Mecánico',
      coordinator: lang === 'en' ? 'Coordinator' : 'Coordinador',
      support: lang === 'en' ? 'Support' : 'Apoyo',
    };

    function openModal(staff?: any) {
      staffForm?.reset();
      modalError?.classList.add('hidden');

      if (staff) {
        // Edit mode
        if (modalTitle) modalTitle.textContent = lang === 'en' ? 'Edit Staff' : 'Editar Staff';
        if (staffIdInput) staffIdInput.value = staff.id;

        // Fill form
        const fields = ['name', 'dni', 'phone', 'role'];
        fields.forEach(field => {
          const input = document.getElementById(field) as HTMLInputElement | HTMLSelectElement;
          if (input && staff[field]) {
            input.value = staff[field];
          }
        });
      } else {
        // Add mode
        if (modalTitle) modalTitle.textContent = lang === 'en' ? 'Add Staff' : 'Añadir Staff';
        if (staffIdInput) staffIdInput.value = '';
      }

      staffModal?.classList.remove('hidden');
    }

    function closeModal() {
      staffModal?.classList.add('hidden');
    }

    function renderStaff() {
      if (!staffList) return;

      if (currentStaff.length === 0) {
        staffList.classList.add('hidden');
        emptyState?.classList.remove('hidden');
        return;
      }

      emptyState?.classList.add('hidden');
      staffList.classList.remove('hidden');

      staffList.innerHTML = currentStaff.map((member) => `
        <div class="bg-racing-gray rounded-xl p-6 border border-racing-silver/10 flex items-center justify-between">
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 bg-vanilla/20 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-vanilla" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
            </div>
            <div>
              <h3 class="text-white font-medium">${member.name}</h3>
              <p class="text-sm text-racing-silver">${roles[member.role] || member.role}</p>
            </div>
          </div>
          <div class="flex items-center gap-2">
            <button class="edit-staff-btn p-2 text-racing-silver hover:text-white transition-colors" data-id="${member.id}">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
              </svg>
            </button>
            <button class="delete-staff-btn p-2 text-racing-silver hover:text-red-400 transition-colors" data-id="${member.id}">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
              </svg>
            </button>
          </div>
        </div>
      `).join('');

      // Attach event listeners
      document.querySelectorAll('.edit-staff-btn').forEach(btn => {
        btn.addEventListener('click', () => {
          const id = (btn as HTMLElement).dataset.id;
          const member = currentStaff.find(s => s.id === id);
          if (member) openModal(member);
        });
      });

      document.querySelectorAll('.delete-staff-btn').forEach(btn => {
        btn.addEventListener('click', async () => {
          const id = (btn as HTMLElement).dataset.id;
          const confirmMsg = lang === 'en' ? 'Are you sure you want to delete this staff member?' : '¿Estás seguro de que quieres eliminar este miembro del staff?';
          if (confirm(confirmMsg)) {
            await deleteStaff(id!);
          }
        });
      });

      // Update add button visibility
      if (currentStaff.length >= MAX_STAFF) {
        addStaffBtn?.classList.add('hidden');
      } else {
        addStaffBtn?.classList.remove('hidden');
      }
    }

    async function loadStaff() {
      try {
        // First check if team exists
        const teamResponse = await fetchWithAuth('/api/teams');
        const teamData = await teamResponse.json();

        loadingState?.classList.add('hidden');

        if (!teamData.team) {
          noTeamState?.classList.remove('hidden');
          return;
        }

        const response = await fetchWithAuth('/api/staff');
        const data = await response.json();

        currentStaff = data.staff || [];
        renderStaff();
      } catch (error) {
        console.error('Error loading staff:', error);
        loadingState?.classList.add('hidden');
      }
    }

    async function saveStaff(data: any) {
      const isEdit = !!staffIdInput?.value;
      const method = isEdit ? 'PUT' : 'POST';
      const url = isEdit ? `/api/staff?id=${staffIdInput.value}` : '/api/staff';

      const response = await fetchWithAuth(url, {
        method,
        body: JSON.stringify(data)
      });

      const result = await response.json();

      if (!response.ok) {
        throw new Error(result.error || 'Error al guardar');
      }

      return result;
    }

    async function deleteStaff(id: string) {
      try {
        const response = await fetchWithAuth(`/api/staff?id=${id}`, {
          method: 'DELETE'
        });

        if (!response.ok) {
          const data = await response.json();
          throw new Error(data.error || 'Error al eliminar');
        }

        currentStaff = currentStaff.filter(s => s.id !== id);
        renderStaff();
      } catch (error: any) {
        alert(error.message);
      }
    }

    // Event listeners
    addStaffBtn?.addEventListener('click', () => openModal());
    addFirstStaffBtn?.addEventListener('click', () => openModal());
    closeModalBtn?.addEventListener('click', closeModal);
    cancelModalBtn?.addEventListener('click', closeModal);
    modalBackdrop?.addEventListener('click', closeModal);

    staffForm?.addEventListener('submit', async (e) => {
      e.preventDefault();
      modalError?.classList.add('hidden');

      const submitBtn = document.getElementById('submit-staff-btn');
      if (submitBtn) {
        submitBtn.setAttribute('disabled', 'true');
        submitBtn.textContent = lang === 'en' ? 'Saving...' : 'Guardando...';
      }

      const formData = new FormData(staffForm);
      const data: Record<string, any> = {};

      formData.forEach((value, key) => {
        data[key] = value;
      });

      try {
        const result = await saveStaff(data);

        if (staffIdInput?.value) {
          // Update existing
          const index = currentStaff.findIndex(s => s.id === staffIdInput.value);
          if (index !== -1) {
            currentStaff[index] = result.staff;
          }
        } else {
          // Add new
          currentStaff.push(result.staff);
        }

        renderStaff();
        closeModal();
      } catch (error: any) {
        if (modalError) {
          modalError.textContent = error.message;
          modalError.classList.remove('hidden');
        }
      } finally {
        if (submitBtn) {
          submitBtn.removeAttribute('disabled');
          submitBtn.textContent = lang === 'en' ? 'Save' : 'Guardar';
        }
      }
    });

    loadStaff();
  </script>
</DashboardLayout>
