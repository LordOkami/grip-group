---
import Layout from '../layouts/Layout.astro';
import { getContent } from '../i18n/utils';

const content = await getContent('es', 'home');
---

<Layout title={content.meta.title} currentPage="home">
  <!-- Hero Section with Background Image -->
  <section class="relative min-h-[90vh] flex items-center justify-center overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <img
        src={content.hero.backgroundImage}
        alt="Carrera de motos 125cc"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-racing-black/60 via-racing-black/80 to-racing-black"></div>
    </div>

    <div class="relative z-10 container mx-auto px-4 md:px-8 text-center">
      <div class="inline-block mb-6 px-4 py-2 bg-racing-green/30 border border-vanilla/30 rounded-full">
        <span class="text-vanilla text-sm font-semibold uppercase tracking-widest">{content.hero.tagline}</span>
      </div>

      {content.hero.preTitle && (
        <div class="text-3xl md:text-4xl lg:text-5xl font-bold mb-2 text-vanilla uppercase tracking-wider" style="font-family: 'Bebas Neue', sans-serif;">
          {content.hero.preTitle}
        </div>
      )}

      <h1 class="text-6xl md:text-8xl lg:text-9xl font-bold mb-6 leading-none" style="font-family: 'Bebas Neue', sans-serif;">
        <span class="text-white">{content.hero.title}</span>
      </h1>

      <p class="text-xl md:text-2xl text-racing-silver max-w-3xl mx-auto mb-8">
        {content.hero.subtitle}<br>
        <span class="text-white font-semibold">{content.hero.subtitleBold}</span>
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a href={content.hero.ctaLink} class="btn-primary">
          {content.hero.cta}
        </a>
        <a href={content.hero.ctaSecondaryLink} class="btn-secondary">
          {content.hero.ctaSecondary}
        </a>
      </div>

      <!-- Stats -->
      <div class="grid grid-cols-3 gap-4 md:gap-8 mt-16 max-w-2xl mx-auto">
        {content.hero.stats.map((stat: { value: string; label: string }) => (
          <div class="text-center">
            <div class="text-4xl md:text-5xl font-bold text-vanilla" style="font-family: 'Bebas Neue', sans-serif;">{stat.value}</div>
            <div class="text-racing-silver text-sm uppercase tracking-wider">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
      <svg class="w-6 h-6 text-racing-silver" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
      </svg>
    </div>
  </section>

  <!-- Concepto Section -->
  <section id="concepto" class="py-24 bg-racing-gray">
    <div class="container mx-auto px-4 md:px-8">
      <div class="text-center mb-16">
        <span class="text-vanilla text-sm font-semibold uppercase tracking-widest mb-4 block">{content.concepto.tagline}</span>
        <h2 class="section-title">¿{content.concepto.title} <span class="text-vanilla">{content.concepto.titleAccent}</span>?</h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {content.concepto.cards.map((card: { title: string; description: string; icon: string }) => (
          <div class="card group">
            <div class="w-14 h-14 bg-racing-green/20 rounded-xl flex items-center justify-center mb-6 group-hover:bg-racing-green/30 transition-colors">
              {card.icon === 'money' && (
                <svg class="w-7 h-7 text-vanilla" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              )}
              {card.icon === 'lightning' && (
                <svg class="w-7 h-7 text-vanilla" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                </svg>
              )}
              {card.icon === 'team' && (
                <svg class="w-7 h-7 text-vanilla" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
              )}
              {card.icon === 'shield' && (
                <svg class="w-7 h-7 text-vanilla" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
                </svg>
              )}
              {card.icon === 'book' && (
                <svg class="w-7 h-7 text-vanilla" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                </svg>
              )}
              {card.icon === 'smile' && (
                <svg class="w-7 h-7 text-vanilla" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              )}
            </div>
            <h3 class="text-xl font-bold text-white mb-3">{card.title}</h3>
            <p class="text-racing-silver">{card.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Bikes Gallery Section -->
  <section class="py-24 bg-racing-black">
    <div class="container mx-auto px-4 md:px-8">
      <div class="text-center mb-12">
        <span class="text-vanilla text-sm font-semibold uppercase tracking-widest mb-4 block">{content.bikes.tagline}</span>
        <h2 class="section-title">{content.bikes.title} <span class="text-vanilla">{content.bikes.titleAccent}</span></h2>
      </div>

      <div class="gallery-grid">
        {content.bikes.images.map((image: { src: string; alt: string }) => (
          <div class="gallery-item">
            <img src={image.src} alt={image.alt} loading="lazy" />
          </div>
        ))}
      </div>

      <div class="text-center mt-8">
        <a href={content.bikes.ctaLink} class="btn-secondary">{content.bikes.ctaText}</a>
      </div>
    </div>
  </section>

  <!-- Teams Section -->
  <section class="py-24 bg-racing-gray">
    <div class="container mx-auto px-4 md:px-8">
      <div class="text-center mb-12">
        <span class="text-vanilla text-sm font-semibold uppercase tracking-widest mb-4 block">{content.teams.tagline}</span>
        <h2 class="section-title">{content.teams.title} <span class="text-vanilla">{content.teams.titleAccent}</span></h2>
        <p class="section-subtitle mx-auto mt-4">{content.teams.subtitle}</p>
      </div>

      <div class="gallery-grid">
        {content.teams.images.map((image: { src: string; alt: string }) => (
          <div class="gallery-item">
            <img src={image.src} alt={image.alt} loading="lazy" />
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-24 bg-racing-black relative overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <img
        src={content.cta.backgroundImage}
        alt="Circuito"
        class="w-full h-full object-cover opacity-30"
      />
      <div class="absolute inset-0 bg-racing-black/80"></div>
    </div>

    <div class="container mx-auto px-4 md:px-8 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="section-title mb-6">¿{content.cta.title} <span class="text-vanilla">{content.cta.titleAccent}</span>?</h2>
        <p class="section-subtitle mx-auto mb-8">{content.cta.subtitle}</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href={content.cta.buttonLink} class="btn-primary">
            {content.cta.button}
          </a>
          <a href={content.cta.buttonSecondaryLink} class="btn-secondary">
            {content.cta.buttonSecondary}
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
