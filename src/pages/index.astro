---
import Layout from '../layouts/Layout.astro';
import { getContent } from '../i18n/utils';

const content = await getContent('es', 'home');
---

<Layout title={content.meta.title} currentPage="home">
  <!-- Hero Section with Background Image -->
  <section class="relative min-h-[90vh] flex items-center justify-center overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <img
        src={content.hero.backgroundImage}
        alt="Carrera de motos 125cc"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-racing-black/60 via-racing-black/80 to-racing-black"></div>
    </div>

    <div class="relative z-20 container mx-auto px-4 md:px-8 text-center">
      <!-- Logo + Presenta -->
      <div class="mb-0">
        <img
          src="/logo/logo_text_only.png"
          alt="Grip Club"
          class="h-6 md:h-8 mx-auto invert brightness-200"
        />
        <span class="text-vanilla/80 text-xs md:text-sm uppercase tracking-[0.3em] mt-1 block">presenta</span>
      </div>

      <!-- Logo Carousel -->
      <div class="logo-carousel-container relative mx-auto w-full max-w-4xl mb-1 overflow-hidden">
        <div class="logo-carousel-track flex gap-8 items-center justify-center py-8">
          <div class="logo-item">
            <img
              src="/logo/logo_text_only_white.png"
              alt="Grip Club"
              class="h-32 md:h-40 object-contain filter drop-shadow-2xl"
            />
          </div>
          <div class="logo-item">
            <img
              src="/logo/logo_text_only_white.png"
              alt="Grip Club"
              class="h-32 md:h-40 object-contain filter drop-shadow-2xl"
            />
          </div>
          <div class="logo-item logo-center">
            <img
              src="/logo/logo_text_only_white.png"
              alt="Grip Club"
              class="h-40 md:h-52 object-contain filter drop-shadow-2xl"
            />
          </div>
          <div class="logo-item">
            <img
              src="/logo/logo_text_only_white.png"
              alt="Grip Club"
              class="h-32 md:h-40 object-contain filter drop-shadow-2xl"
            />
          </div>
          <div class="logo-item">
            <img
              src="/logo/logo_text_only_white.png"
              alt="Grip Club"
              class="h-32 md:h-40 object-contain filter drop-shadow-2xl"
            />
          </div>
        </div>
      </div>

      <p class="text-lg md:text-xl text-racing-silver max-w-3xl mx-auto mb-6">
        {content.hero.subtitle}
        {content.hero.subtitleBold && (
          <>
            <br>
            <span class="text-white font-semibold">{content.hero.subtitleBold}</span>
          </>
        )}
      </p>

      <!-- Stats -->
      <div class="grid grid-cols-3 gap-4 md:gap-8 mt-8 max-w-2xl mx-auto">
        {content.hero.stats.map((stat: { top?: string; topSize?: string; middle?: string; middleSize?: string; bottom?: string; bottomSize?: string }) => (
          <div class="text-center flex flex-col justify-center items-center gap-1">
            {stat.top && (
              <div class={`text-vanilla uppercase tracking-wider ${stat.topSize === 'large' ? 'text-4xl md:text-5xl font-bold' : 'text-sm text-racing-silver'}`} style={stat.topSize === 'large' ? "font-family: 'Bebas Neue', sans-serif;" : ""}>{stat.top}</div>
            )}
            {stat.middle && (
              <div class={`text-vanilla uppercase tracking-wider ${stat.middleSize === 'large' ? 'text-4xl md:text-5xl font-bold' : 'text-sm text-racing-silver'}`} style={stat.middleSize === 'large' ? "font-family: 'Bebas Neue', sans-serif;" : ""}>{stat.middle}</div>
            )}
            {stat.bottom && (
              <div class={`text-vanilla uppercase tracking-wider ${stat.bottomSize === 'large' ? 'text-4xl md:text-5xl font-bold' : 'text-sm text-racing-silver'}`} style={stat.bottomSize === 'large' ? "font-family: 'Bebas Neue', sans-serif;" : ""}>{stat.bottom}</div>
            )}
          </div>
        ))}
      </div>

      {content.hero.nextEvent && (
        <div class="max-w-4xl mx-auto mt-12 mb-8">
          <div class="relative overflow-hidden rounded-2xl bg-gradient-to-r from-racing-green/20 via-racing-green/10 to-racing-green/20 border-2 border-racing-green/40 backdrop-blur-sm">
            <!-- Animated background effect -->
            <div class="absolute inset-0 bg-gradient-to-r from-transparent via-racing-green/5 to-transparent animate-shimmer"></div>

            <div class="relative p-6 md:p-8">
              <!-- Header -->
              <div class="flex items-center justify-center gap-3 mb-4">
                <div class="w-10 h-10 bg-racing-green rounded-full flex items-center justify-center animate-pulse">
                  <svg class="w-6 h-6 text-racing-black" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M3 13h1v7c0 1.103.897 2 2 2h12c1.103 0 2-.897 2-2v-7h1a1 1 0 0 0 .707-1.707l-9-9a.999.999 0 0 0-1.414 0l-9 9A1 1 0 0 0 3 13zm9-8.586 6 6V15l.001 5H6v-9.586l6-6z"/>
                    <path d="M12 18c3.703 0 4.901-3.539 4.001-6h-1.752c-.741 2.188-1.979 4.002-2.249 4.002s-1.508-1.814-2.249-4.002H7.999c-.9 2.461.298 6 4.001 6z"/>
                  </svg>
                </div>
                <span class="text-racing-green uppercase tracking-[0.2em] text-xs md:text-sm font-bold">Próximo Desafío</span>
                <div class="w-10 h-10 bg-racing-green rounded-full flex items-center justify-center animate-pulse">
                  <svg class="w-6 h-6 text-racing-black" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M3 13h1v7c0 1.103.897 2 2 2h12c1.103 0 2-.897 2-2v-7h1a1 1 0 0 0 .707-1.707l-9-9a.999.999 0 0 0-1.414 0l-9 9A1 1 0 0 0 3 13zm9-8.586 6 6V15l.001 5H6v-9.586l6-6z"/>
                    <path d="M12 18c3.703 0 4.901-3.539 4.001-6h-1.752c-.741 2.188-1.979 4.002-2.249 4.002s-1.508-1.814-2.249-4.002H7.999c-.9 2.461.298 6 4.001 6z"/>
                  </svg>
                </div>
              </div>

              <!-- Event Name -->
              <div class="text-center mb-6">
                <a href="/eventos" class="group inline-block">
                  <h3 class="text-2xl md:text-4xl font-bold text-vanilla mb-2 group-hover:text-racing-green transition-colors" style="font-family: 'Bebas Neue', sans-serif; letter-spacing: 0.05em;">
                    Desafío Bronce 8 Horas
                  </h3>
                  <div class="h-1 bg-racing-green w-0 group-hover:w-full transition-all duration-300 mx-auto"></div>
                </a>
              </div>

              <!-- Event Details -->
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4 max-w-2xl mx-auto">
                <!-- Date -->
                <div class="flex items-center justify-center gap-3 bg-racing-black/40 rounded-xl p-4 backdrop-blur-sm border border-racing-green/20">
                  <div class="w-12 h-12 bg-racing-green/20 rounded-lg flex items-center justify-center shrink-0">
                    <svg class="w-6 h-6 text-racing-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                  </div>
                  <div class="text-left">
                    <p class="text-racing-silver text-xs uppercase tracking-wider mb-1">Cuando</p>
                    <p class="text-white text-lg md:text-xl font-bold" style="font-family: 'Bebas Neue', sans-serif;">10 Octubre 2026</p>
                  </div>
                </div>

                <!-- Location -->
                <div class="flex items-center justify-center gap-3 bg-racing-black/40 rounded-xl p-4 backdrop-blur-sm border border-racing-green/20">
                  <div class="w-12 h-12 bg-racing-green/20 rounded-lg flex items-center justify-center shrink-0">
                    <svg class="w-6 h-6 text-racing-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                  </div>
                  <div class="text-left">
                    <p class="text-racing-silver text-xs uppercase tracking-wider mb-1">Donde</p>
                    <a href="https://www.circuitodr7.es/" target="_blank" rel="noopener noreferrer" class="text-white text-lg md:text-xl font-bold hover:text-racing-green transition-colors flex items-center gap-1 group" style="font-family: 'Bebas Neue', sans-serif;">
                      Circuito DR7
                      <svg class="w-4 h-4 opacity-0 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                      </svg>
                    </a>
                    <p class="text-racing-silver text-xs">Tarancón, Cuenca</p>
                  </div>
                </div>
              </div>

              <!-- Call to action hint -->
              <div class="mt-6 text-center">
                <p class="text-racing-silver text-sm">
                  ¿Listo para el desafío?
                  <span class="text-racing-green">↓</span>
                </p>
              </div>
            </div>
          </div>
        </div>
      )}

      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a href={content.hero.ctaLink} class="btn-primary">
          {content.hero.cta}
        </a>
        <a href={content.hero.ctaSecondaryLink} class="btn-secondary">
          {content.hero.ctaSecondary}
        </a>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
      <svg class="w-6 h-6 text-racing-silver" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
      </svg>
    </div>
  </section>

  <style>
    .logo-carousel-container {
      perspective: 1000px;
    }

    .logo-carousel-track {
      animation: carousel-float 3s ease-in-out infinite;
    }

    .logo-item {
      opacity: 0.6;
      transform: scale(0.9);
      transition: all 0.5s ease;
    }

    .logo-item.logo-center {
      opacity: 1;
      transform: scale(1.1);
    }

    .logo-item:hover {
      opacity: 1;
      transform: scale(1.05);
    }

    @keyframes carousel-float {
      0%, 100% {
        transform: translateY(0);
      }
      50% {
        transform: translateY(-10px);
      }
    }

    @keyframes shimmer {
      0% {
        transform: translateX(-100%);
      }
      100% {
        transform: translateX(100%);
      }
    }

    .animate-shimmer {
      animation: shimmer 3s ease-in-out infinite;
    }

    @media (max-width: 768px) {
      .logo-carousel-track {
        flex-wrap: wrap;
        gap: 1rem;
      }

      .logo-item.logo-center {
        order: -1;
        width: 100%;
        display: flex;
        justify-content: center;
      }
    }

  </style>

  <script>
    // Mouse tracking for logo carousel items
    function initLogoInteraction() {
      const logoItems = document.querySelectorAll('.logo-item');
      if (!logoItems.length) return;

      logoItems.forEach((item) => {
        item.addEventListener('mouseenter', () => {
          logoItems.forEach((otherItem) => {
            if (otherItem !== item) {
              otherItem.style.opacity = '0.3';
            }
          });
        });

        item.addEventListener('mouseleave', () => {
          logoItems.forEach((otherItem) => {
            if (otherItem.classList.contains('logo-center')) {
              otherItem.style.opacity = '1';
            } else {
              otherItem.style.opacity = '0.6';
            }
          });
        });
      });
    }

    // Ultra-realistic 125cc 4T motorcycle pass-by sound
    function playMotoSound() {
      const ctx = new (window.AudioContext || (window as any).webkitAudioContext)();
      const now = ctx.currentTime;
      const duration = 2.5;
      const peakTime = duration * 0.42; // When bike is closest

      // Master bus with compression and EQ
      const masterGain = ctx.createGain();
      const compressor = ctx.createDynamicsCompressor();
      compressor.threshold.value = -24;
      compressor.knee.value = 30;
      compressor.ratio.value = 12;
      compressor.attack.value = 0.003;
      compressor.release.value = 0.25;

      const masterEQ = ctx.createBiquadFilter();
      masterEQ.type = 'peaking';
      masterEQ.frequency.value = 800;
      masterEQ.Q.value = 1;
      masterEQ.gain.value = 3;

      const panner = ctx.createStereoPanner();

      masterGain.connect(masterEQ);
      masterEQ.connect(compressor);
      compressor.connect(panner);
      panner.connect(ctx.destination);

      // Realistic Doppler panning
      panner.pan.setValueAtTime(-1, now);
      panner.pan.setTargetAtTime(-0.3, now + duration * 0.2, 0.3);
      panner.pan.setTargetAtTime(0, now + peakTime, 0.1);
      panner.pan.setTargetAtTime(0.5, now + duration * 0.6, 0.2);
      panner.pan.linearRampToValueAtTime(1, now + duration);

      // === ENGINE SOUND ===
      // 125cc 4T single at ~9000-11000 RPM = 75-92 Hz firing frequency
      const approachRPM = 9500;
      const peakRPM = 11500;
      const departRPM = 8000;

      const rpmToFreq = (rpm: number) => rpm / 120; // 4-stroke single: RPM/60/2
      const baseApproach = rpmToFreq(approachRPM);
      const basePeak = rpmToFreq(peakRPM);
      const baseDepart = rpmToFreq(departRPM);

      // Primary engine harmonics (cylinder firing)
      const engineHarmonics = [
        { mult: 0.5, gain: 0.15, type: 'sine' as OscillatorType },      // Sub-harmonic rumble
        { mult: 1, gain: 0.35, type: 'sawtooth' as OscillatorType },    // Fundamental
        { mult: 2, gain: 0.28, type: 'sawtooth' as OscillatorType },    // 2nd harmonic
        { mult: 3, gain: 0.18, type: 'square' as OscillatorType },      // 3rd - adds bite
        { mult: 4, gain: 0.12, type: 'sawtooth' as OscillatorType },    // 4th
        { mult: 5, gain: 0.08, type: 'square' as OscillatorType },      // 5th
        { mult: 6, gain: 0.05, type: 'sawtooth' as OscillatorType },    // 6th
        { mult: 8, gain: 0.03, type: 'square' as OscillatorType },      // 8th - high end sizzle
      ];

      engineHarmonics.forEach((h) => {
        const osc = ctx.createOscillator();
        const gain = ctx.createGain();
        const filter = ctx.createBiquadFilter();

        osc.type = h.type;
        filter.type = 'lowpass';
        filter.frequency.value = Math.min(3000, 400 * h.mult);
        filter.Q.value = 0.7;

        osc.connect(filter);
        filter.connect(gain);
        gain.connect(masterGain);

        // Doppler frequency shift
        osc.frequency.setValueAtTime(baseApproach * h.mult, now);
        osc.frequency.exponentialRampToValueAtTime(basePeak * h.mult * 1.15, now + peakTime);
        osc.frequency.exponentialRampToValueAtTime(baseDepart * h.mult * 0.85, now + duration);

        // Volume: proximity effect (inverse square approximation)
        const g = h.gain * 0.15;
        gain.gain.setValueAtTime(0.001, now);
        gain.gain.exponentialRampToValueAtTime(g * 0.2, now + 0.1);
        gain.gain.exponentialRampToValueAtTime(g * 0.5, now + duration * 0.25);
        gain.gain.exponentialRampToValueAtTime(g, now + peakTime);
        gain.gain.exponentialRampToValueAtTime(g * 0.6, now + duration * 0.55);
        gain.gain.exponentialRampToValueAtTime(g * 0.2, now + duration * 0.8);
        gain.gain.exponentialRampToValueAtTime(0.001, now + duration);

        osc.start(now);
        osc.stop(now + duration + 0.1);
      });

      // === EXHAUST RESONANCE ===
      const exhaustOsc = ctx.createOscillator();
      const exhaustGain = ctx.createGain();
      const exhaustFilter = ctx.createBiquadFilter();
      const exhaustFilter2 = ctx.createBiquadFilter();

      exhaustOsc.type = 'sawtooth';
      exhaustFilter.type = 'bandpass';
      exhaustFilter.frequency.value = 180;
      exhaustFilter.Q.value = 8;
      exhaustFilter2.type = 'lowpass';
      exhaustFilter2.frequency.value = 600;

      exhaustOsc.connect(exhaustFilter);
      exhaustFilter.connect(exhaustFilter2);
      exhaustFilter2.connect(exhaustGain);
      exhaustGain.connect(masterGain);

      exhaustOsc.frequency.setValueAtTime(baseApproach * 2, now);
      exhaustOsc.frequency.exponentialRampToValueAtTime(basePeak * 2, now + peakTime);
      exhaustOsc.frequency.exponentialRampToValueAtTime(baseDepart * 2, now + duration);

      exhaustGain.gain.setValueAtTime(0.001, now);
      exhaustGain.gain.exponentialRampToValueAtTime(0.08, now + peakTime);
      exhaustGain.gain.exponentialRampToValueAtTime(0.001, now + duration);

      exhaustOsc.start(now);
      exhaustOsc.stop(now + duration + 0.1);

      // === INTAKE NOISE ===
      const intakeLength = Math.floor(ctx.sampleRate * duration);
      const intakeBuffer = ctx.createBuffer(1, intakeLength, ctx.sampleRate);
      const intakeData = intakeBuffer.getChannelData(0);

      for (let i = 0; i < intakeLength; i++) {
        const t = i / ctx.sampleRate;
        const freq = baseApproach + (basePeak - baseApproach) * Math.min(1, t / peakTime);
        const period = ctx.sampleRate / freq;
        const phase = (i % period) / period;
        // Pulsing intake whoosh
        intakeData[i] = (Math.random() * 2 - 1) * (phase < 0.3 ? 0.8 : 0.2) * Math.sin(Math.PI * t / duration);
      }

      const intakeSource = ctx.createBufferSource();
      const intakeGain = ctx.createGain();
      const intakeFilter = ctx.createBiquadFilter();

      intakeSource.buffer = intakeBuffer;
      intakeFilter.type = 'bandpass';
      intakeFilter.frequency.value = 350;
      intakeFilter.Q.value = 2;

      intakeSource.connect(intakeFilter);
      intakeFilter.connect(intakeGain);
      intakeGain.connect(masterGain);

      intakeGain.gain.setValueAtTime(0.001, now);
      intakeGain.gain.exponentialRampToValueAtTime(0.04, now + peakTime);
      intakeGain.gain.exponentialRampToValueAtTime(0.001, now + duration);

      intakeSource.start(now);
      intakeSource.stop(now + duration + 0.1);

      // === MECHANICAL/VALVE TRAIN NOISE ===
      const mechLength = Math.floor(ctx.sampleRate * duration);
      const mechBuffer = ctx.createBuffer(1, mechLength, ctx.sampleRate);
      const mechData = mechBuffer.getChannelData(0);

      for (let i = 0; i < mechLength; i++) {
        const t = i / ctx.sampleRate;
        const freq = baseApproach * 2 + (basePeak - baseApproach) * 2 * Math.min(1, t / peakTime);
        const period = ctx.sampleRate / freq;
        const phase = (i % period) / period;
        // Sharp clicks for valve train
        mechData[i] = phase < 0.05 ? (Math.random() - 0.5) * 2 : (Math.random() - 0.5) * 0.1;
      }

      const mechSource = ctx.createBufferSource();
      const mechGain = ctx.createGain();
      const mechFilter = ctx.createBiquadFilter();

      mechSource.buffer = mechBuffer;
      mechFilter.type = 'highpass';
      mechFilter.frequency.value = 2000;
      mechFilter.Q.value = 1;

      mechSource.connect(mechFilter);
      mechFilter.connect(mechGain);
      mechGain.connect(masterGain);

      mechGain.gain.setValueAtTime(0.001, now);
      mechGain.gain.exponentialRampToValueAtTime(0.025, now + peakTime);
      mechGain.gain.exponentialRampToValueAtTime(0.001, now + duration);

      mechSource.start(now);
      mechSource.stop(now + duration + 0.1);

      // === EXHAUST CRACKLE/POPS ===
      const crackleLength = Math.floor(ctx.sampleRate * duration);
      const crackleBuffer = ctx.createBuffer(1, crackleLength, ctx.sampleRate);
      const crackleData = crackleBuffer.getChannelData(0);

      for (let i = 0; i < crackleLength; i++) {
        const t = i / ctx.sampleRate;
        // More pops after peak (deceleration)
        const popChance = t > peakTime ? 0.0008 : 0.0002;
        if (Math.random() < popChance) {
          const popLength = Math.floor(Math.random() * 400 + 100);
          for (let j = 0; j < popLength && i + j < crackleLength; j++) {
            crackleData[i + j] = (Math.random() * 2 - 1) * Math.exp(-j / 80) * 1.5;
          }
        }
      }

      const crackleSource = ctx.createBufferSource();
      const crackleGain = ctx.createGain();
      const crackleFilter = ctx.createBiquadFilter();

      crackleSource.buffer = crackleBuffer;
      crackleFilter.type = 'bandpass';
      crackleFilter.frequency.value = 1200;
      crackleFilter.Q.value = 0.5;

      crackleSource.connect(crackleFilter);
      crackleFilter.connect(crackleGain);
      crackleGain.connect(masterGain);

      crackleGain.gain.setValueAtTime(0.08, now);

      crackleSource.start(now);
      crackleSource.stop(now + duration + 0.1);

      // === WIND/AIR RUSH ===
      const windLength = Math.floor(ctx.sampleRate * duration);
      const windBuffer = ctx.createBuffer(1, windLength, ctx.sampleRate);
      const windData = windBuffer.getChannelData(0);

      // Pink-ish noise for wind
      let b0 = 0, b1 = 0, b2 = 0, b3 = 0, b4 = 0, b5 = 0, b6 = 0;
      for (let i = 0; i < windLength; i++) {
        const white = Math.random() * 2 - 1;
        b0 = 0.99886 * b0 + white * 0.0555179;
        b1 = 0.99332 * b1 + white * 0.0750759;
        b2 = 0.96900 * b2 + white * 0.1538520;
        b3 = 0.86650 * b3 + white * 0.3104856;
        b4 = 0.55000 * b4 + white * 0.5329522;
        b5 = -0.7616 * b5 - white * 0.0168980;
        windData[i] = (b0 + b1 + b2 + b3 + b4 + b5 + b6 + white * 0.5362) * 0.11;
        b6 = white * 0.115926;
      }

      const windSource = ctx.createBufferSource();
      const windGain = ctx.createGain();
      const windFilter = ctx.createBiquadFilter();

      windSource.buffer = windBuffer;
      windFilter.type = 'bandpass';
      windFilter.frequency.value = 800;
      windFilter.Q.value = 0.3;

      windSource.connect(windFilter);
      windFilter.connect(windGain);
      windGain.connect(masterGain);

      // Wind gets louder at peak
      windGain.gain.setValueAtTime(0.001, now);
      windGain.gain.exponentialRampToValueAtTime(0.06, now + peakTime);
      windGain.gain.exponentialRampToValueAtTime(0.001, now + duration);

      windSource.start(now);
      windSource.stop(now + duration + 0.1);

      // Master volume
      masterGain.gain.setValueAtTime(1.2, now);
    }

    // Initialize when DOM is ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', () => {
        initLogoInteraction();
      });
    } else {
      initLogoInteraction();
    }
  </script>

</Layout>
