---
import Layout from '../layouts/Layout.astro';
import { getContent } from '../i18n/utils';

const content = await getContent('es', 'home');
---

<Layout title={content.meta.title} currentPage="home">
  <!-- Hero Section with Background Image -->
  <section class="relative min-h-[90vh] flex items-center justify-center overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <img
        src={content.hero.backgroundImage}
        alt="Carrera de motos 125cc"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-racing-black/60 via-racing-black/80 to-racing-black"></div>
    </div>

    <!-- Dust Particles -->
    <div id="particles-container" class="absolute inset-0 pointer-events-none z-10"></div>

    <div class="relative z-20 container mx-auto px-4 md:px-8 text-center">
      <!-- Logo + Presenta -->
      <div class="mb-0">
        <img
          src="/logo/logo_text_only.png"
          alt="Grip Club"
          class="h-6 md:h-8 mx-auto invert brightness-200"
        />
        <span class="text-vanilla/80 text-xs md:text-sm uppercase tracking-[0.3em] mt-1 block">presenta</span>
      </div>

      <!-- Desafío Bronce Icon with Effects -->
      <div class="hero-badge-container relative mx-auto w-64 md:w-80 lg:w-96 mb-1">
        <div class="hero-badge-glow absolute inset-0 opacity-0 transition-opacity duration-500"></div>
        <img
          id="hero-badge"
          src="/desafios/desafio_bronce_icon_2.png"
          alt="Desafío Bronce 8 Horas 125cc 4T"
          class="hero-badge w-full relative z-10 drop-shadow-2xl transition-all duration-300 ease-out cursor-pointer"
        />
        <div class="hero-badge-shine absolute inset-0 z-20 pointer-events-none opacity-0"></div>
      </div>

      <p class="text-lg md:text-xl text-racing-silver max-w-3xl mx-auto mb-6">
        {content.hero.subtitle}<br>
        <span class="text-white font-semibold">{content.hero.subtitleBold}</span>
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a href={content.hero.ctaLink} class="btn-primary">
          {content.hero.cta}
        </a>
        <a href={content.hero.ctaSecondaryLink} class="btn-secondary">
          {content.hero.ctaSecondary}
        </a>
      </div>

      <!-- Stats -->
      <div class="grid grid-cols-3 gap-4 md:gap-8 mt-12 max-w-2xl mx-auto">
        {content.hero.stats.map((stat: { value: string; label: string }) => (
          <div class="text-center">
            <div class="text-4xl md:text-5xl font-bold text-vanilla" style="font-family: 'Bebas Neue', sans-serif;">{stat.value}</div>
            <div class="text-racing-silver text-sm uppercase tracking-wider">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
      <svg class="w-6 h-6 text-racing-silver" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
      </svg>
    </div>
  </section>

  <style>
    .hero-badge-container:hover .hero-badge {
      transform: scale(1.05) translateY(-5px);
      filter: drop-shadow(0 25px 50px rgba(205, 127, 50, 0.4));
    }

    .hero-badge-container:hover .hero-badge-glow {
      opacity: 1;
    }

    .hero-badge-glow {
      background: radial-gradient(ellipse at center, rgba(205, 127, 50, 0.3) 0%, transparent 70%);
      filter: blur(40px);
      transform: scale(1.5);
    }

    .hero-badge-shine {
      background: linear-gradient(
        105deg,
        transparent 40%,
        rgba(255, 255, 255, 0.4) 45%,
        rgba(255, 255, 255, 0.6) 50%,
        rgba(255, 255, 255, 0.4) 55%,
        transparent 60%
      );
      background-size: 200% 100%;
      background-position: 200% 0;
      -webkit-mask-image: url('/desafios/desafio_bronce_icon_2.png');
      mask-image: url('/desafios/desafio_bronce_icon_2.png');
      -webkit-mask-size: contain;
      mask-size: contain;
      -webkit-mask-repeat: no-repeat;
      mask-repeat: no-repeat;
      -webkit-mask-position: center;
      mask-position: center;
    }

    .hero-badge-container:hover .hero-badge-shine {
      opacity: 1;
      animation: shine 0.8s ease-out forwards;
    }

    @keyframes shine {
      0% { background-position: 200% 0; }
      100% { background-position: -200% 0; }
    }

    /* Dust particles */
    .dust-particle {
      position: absolute;
      width: 3px;
      height: 3px;
      background: rgba(255, 255, 255, 0.3);
      border-radius: 50%;
      pointer-events: none;
      animation: float-dust linear infinite;
    }

    @keyframes float-dust {
      0% {
        transform: translateY(100vh) rotate(0deg);
        opacity: 0;
      }
      10% {
        opacity: 1;
      }
      90% {
        opacity: 1;
      }
      100% {
        transform: translateY(-100px) rotate(720deg);
        opacity: 0;
      }
    }
  </style>

  <script>
    // Create dust particles
    function createDustParticles() {
      const container = document.getElementById('particles-container');
      if (!container) return;

      const particleCount = 30;

      for (let i = 0; i < particleCount; i++) {
        const particle = document.createElement('div');
        particle.className = 'dust-particle';

        // Random properties
        const size = Math.random() * 3 + 1;
        const left = Math.random() * 100;
        const delay = Math.random() * 20;
        const duration = Math.random() * 15 + 20;
        const opacity = Math.random() * 0.5 + 0.1;

        particle.style.cssText = `
          left: ${left}%;
          width: ${size}px;
          height: ${size}px;
          animation-delay: -${delay}s;
          animation-duration: ${duration}s;
          opacity: ${opacity};
          background: rgba(255, 255, 255, ${opacity});
          box-shadow: 0 0 ${size * 2}px rgba(255, 255, 255, ${opacity * 0.5});
        `;

        container.appendChild(particle);
      }
    }

    // Mouse tracking for badge
    function initBadgeInteraction() {
      const badge = document.getElementById('hero-badge');
      if (!badge) return;

      const container = badge.parentElement;

      container?.addEventListener('mousemove', (e) => {
        const rect = container.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const y = e.clientY - rect.top;
        const centerX = rect.width / 2;
        const centerY = rect.height / 2;

        const rotateX = (y - centerY) / 20;
        const rotateY = (centerX - x) / 20;

        badge.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) scale(1.05) translateY(-5px)`;
      });

      container?.addEventListener('mouseleave', () => {
        badge.style.transform = 'perspective(1000px) rotateX(0) rotateY(0) scale(1) translateY(0)';
      });
    }

    // Motorcycle pass-by sound effect using Web Audio API
    function playMotoSound() {
      const audioContext = new (window.AudioContext || (window as any).webkitAudioContext)();

      // Create oscillator for engine sound
      const oscillator = audioContext.createOscillator();
      const gainNode = audioContext.createGain();
      const panNode = audioContext.createStereoPanner();

      // Create noise for exhaust
      const bufferSize = audioContext.sampleRate * 0.8;
      const noiseBuffer = audioContext.createBuffer(1, bufferSize, audioContext.sampleRate);
      const output = noiseBuffer.getChannelData(0);
      for (let i = 0; i < bufferSize; i++) {
        output[i] = Math.random() * 2 - 1;
      }

      const noiseSource = audioContext.createBufferSource();
      noiseSource.buffer = noiseBuffer;
      const noiseGain = audioContext.createGain();
      const noiseFilter = audioContext.createBiquadFilter();
      noiseFilter.type = 'lowpass';
      noiseFilter.frequency.value = 800;

      // Connect nodes
      oscillator.connect(gainNode);
      gainNode.connect(panNode);
      panNode.connect(audioContext.destination);

      noiseSource.connect(noiseFilter);
      noiseFilter.connect(noiseGain);
      noiseGain.connect(panNode);

      // Set initial values
      oscillator.type = 'sawtooth';
      oscillator.frequency.value = 80;
      gainNode.gain.value = 0;
      noiseGain.gain.value = 0;

      const now = audioContext.currentTime;
      const duration = 0.8;

      // Doppler effect - frequency rises then falls
      oscillator.frequency.setValueAtTime(60, now);
      oscillator.frequency.linearRampToValueAtTime(120, now + duration * 0.4);
      oscillator.frequency.linearRampToValueAtTime(50, now + duration);

      // Pan from left to right
      panNode.pan.setValueAtTime(-1, now);
      panNode.pan.linearRampToValueAtTime(1, now + duration);

      // Volume envelope - louder in middle
      gainNode.gain.setValueAtTime(0, now);
      gainNode.gain.linearRampToValueAtTime(0.15, now + duration * 0.3);
      gainNode.gain.linearRampToValueAtTime(0.2, now + duration * 0.5);
      gainNode.gain.linearRampToValueAtTime(0, now + duration);

      noiseGain.gain.setValueAtTime(0, now);
      noiseGain.gain.linearRampToValueAtTime(0.08, now + duration * 0.3);
      noiseGain.gain.linearRampToValueAtTime(0.1, now + duration * 0.5);
      noiseGain.gain.linearRampToValueAtTime(0, now + duration);

      // Start and stop
      oscillator.start(now);
      noiseSource.start(now);
      oscillator.stop(now + duration);
      noiseSource.stop(now + duration);
    }

    // Toggle badge icon on click
    function initBadgeToggle() {
      const badge = document.getElementById('hero-badge') as HTMLImageElement;
      const shine = document.querySelector('.hero-badge-shine') as HTMLElement;
      if (!badge) return;

      const icons = [
        '/desafios/desafio_bronce_icon.png',
        '/desafios/desafio_bronce_icon_2.png'
      ];
      let currentIndex = 1; // Start with icon_2

      badge.addEventListener('click', () => {
        playMotoSound();
        currentIndex = currentIndex === 0 ? 1 : 0;
        badge.src = icons[currentIndex];
        if (shine) {
          shine.style.maskImage = `url('${icons[currentIndex]}')`;
          shine.style.webkitMaskImage = `url('${icons[currentIndex]}')`;
        }
      });
    }

    // Initialize
    createDustParticles();
    initBadgeInteraction();
    initBadgeToggle();
  </script>

  <!-- Concepto Section -->
  <section id="concepto" class="py-24 bg-racing-gray">
    <div class="container mx-auto px-4 md:px-8">
      <div class="text-center mb-16">
        <span class="text-vanilla text-sm font-semibold uppercase tracking-widest mb-4 block">{content.concepto.tagline}</span>
        <h2 class="section-title">¿{content.concepto.title} <span class="text-vanilla">{content.concepto.titleAccent}</span>?</h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {content.concepto.cards.map((card: { title: string; description: string; icon: string }) => (
          <div class="card group">
            <div class="w-14 h-14 bg-racing-green/20 rounded-xl flex items-center justify-center mb-6 group-hover:bg-racing-green/30 transition-colors">
              {card.icon === 'money' && (
                <svg class="w-7 h-7 text-vanilla" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              )}
              {card.icon === 'lightning' && (
                <svg class="w-7 h-7 text-vanilla" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                </svg>
              )}
              {card.icon === 'team' && (
                <svg class="w-7 h-7 text-vanilla" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
              )}
              {card.icon === 'shield' && (
                <svg class="w-7 h-7 text-vanilla" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
                </svg>
              )}
              {card.icon === 'book' && (
                <svg class="w-7 h-7 text-vanilla" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                </svg>
              )}
              {card.icon === 'smile' && (
                <svg class="w-7 h-7 text-vanilla" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              )}
            </div>
            <h3 class="text-xl font-bold text-white mb-3">{card.title}</h3>
            <p class="text-racing-silver">{card.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Teams Section -->
  <section class="py-24 bg-racing-gray">
    <div class="container mx-auto px-4 md:px-8">
      <div class="text-center mb-12">
        <span class="text-vanilla text-sm font-semibold uppercase tracking-widest mb-4 block">{content.teams.tagline}</span>
        <h2 class="section-title">{content.teams.title} <span class="text-vanilla">{content.teams.titleAccent}</span></h2>
        <p class="section-subtitle mx-auto mt-4">{content.teams.subtitle}</p>
      </div>

      <div class="gallery-grid">
        {content.teams.images.map((image: { src: string; alt: string }) => (
          <div class="gallery-item">
            <img src={image.src} alt={image.alt} loading="lazy" />
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-24 bg-racing-black relative overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <img
        src={content.cta.backgroundImage}
        alt="Circuito"
        class="w-full h-full object-cover opacity-30"
      />
      <div class="absolute inset-0 bg-racing-black/80"></div>
    </div>

    <div class="container mx-auto px-4 md:px-8 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="section-title mb-6">¿{content.cta.title} <span class="text-vanilla">{content.cta.titleAccent}</span>?</h2>
        <p class="section-subtitle mx-auto mb-8">{content.cta.subtitle}</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href={content.cta.buttonLink} class="btn-primary">
            {content.cta.button}
          </a>
          <a href={content.cta.buttonSecondaryLink} class="btn-secondary">
            {content.cta.buttonSecondary}
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
