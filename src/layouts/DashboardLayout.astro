---
import '../styles/global.css';
import { getLangFromUrl, useTranslations, useTranslatedPath } from '../i18n/utils';

interface Props {
  title: string;
  currentSection?: string;
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);

const { title, currentSection = 'dashboard' } = Astro.props;

const altLang = lang === 'es' ? 'en' : 'es';
const altPath = lang === 'es'
  ? `/en${Astro.url.pathname}`
  : Astro.url.pathname.replace('/en', '') || '/';
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex, nofollow" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <title>{title} | Grip Club</title>
  </head>
  <body class="min-h-screen flex flex-col bg-racing-black">
    <!-- Header -->
    <header class="fixed top-0 left-0 right-0 z-50 bg-racing-black/90 backdrop-blur-md border-b border-racing-silver/10">
      <nav class="container mx-auto px-4 md:px-8">
        <div class="flex items-center justify-between h-16">
          <!-- Logo -->
          <a href={translatePath('/')} class="flex items-center gap-3 group">
            <div class="w-10 h-10 bg-racing-green rounded-lg flex items-center justify-center group-hover:bg-racing-green-dark transition-colors">
              <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.94-.49-7-3.85-7-7.93s3.05-7.44 7-7.93v15.86zm2-15.86c3.94.49 7 3.85 7 7.93s-3.05 7.44-7 7.93V4.07z"/>
              </svg>
            </div>
            <span class="text-xl font-bold tracking-wider hidden sm:block" style="font-family: 'Bebas Neue', sans-serif;">GRIP CLUB</span>
          </a>

          <!-- User Menu -->
          <div class="flex items-center gap-4">
            <!-- Language Switcher -->
            <a href={altPath} class="nav-link flex items-center gap-1 text-sm">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
              </svg>
              {t('lang.switch')}
            </a>

            <!-- User dropdown -->
            <div class="relative" id="user-menu-container">
              <button id="user-menu-btn" class="flex items-center gap-2 text-white hover:text-vanilla transition-colors">
                <div class="w-8 h-8 bg-racing-green rounded-full flex items-center justify-center">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                  </svg>
                </div>
                <span id="user-name" class="hidden sm:block text-sm"></span>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                </svg>
              </button>

              <div id="user-dropdown" class="hidden absolute right-0 mt-2 w-48 bg-racing-gray rounded-lg shadow-lg border border-racing-silver/10 py-2">
                <a href={translatePath('/')} class="block px-4 py-2 text-sm text-racing-silver hover:text-white hover:bg-racing-silver/10">
                  {t('nav.historia')}
                </a>
                <hr class="border-racing-silver/10 my-2" />
                <button id="logout-btn" class="w-full text-left px-4 py-2 text-sm text-racing-silver hover:text-white hover:bg-racing-silver/10">
                  {t('nav.logout')}
                </button>
              </div>
            </div>
          </div>
        </div>
      </nav>
    </header>

    <!-- Main Content -->
    <div class="flex-grow pt-16 flex">
      <!-- Sidebar -->
      <aside class="hidden md:block w-64 bg-racing-gray border-r border-racing-silver/10 fixed left-0 top-16 bottom-0 overflow-y-auto">
        <nav class="p-4 space-y-2">
          <a href={translatePath('/dashboard')}
             class={`flex items-center gap-3 px-4 py-3 rounded-lg transition-colors ${currentSection === 'dashboard' ? 'bg-racing-green text-white' : 'text-racing-silver hover:bg-racing-silver/10 hover:text-white'}`}>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
            </svg>
            {t('dashboard.title')}
          </a>

          <a href={translatePath('/dashboard/equipo')}
             class={`flex items-center gap-3 px-4 py-3 rounded-lg transition-colors ${currentSection === 'equipo' ? 'bg-racing-green text-white' : 'text-racing-silver hover:bg-racing-silver/10 hover:text-white'}`}>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
            {t('dashboard.teamInfo')}
          </a>

          <a href={translatePath('/dashboard/pilotos')}
             class={`flex items-center gap-3 px-4 py-3 rounded-lg transition-colors ${currentSection === 'pilotos' ? 'bg-racing-green text-white' : 'text-racing-silver hover:bg-racing-silver/10 hover:text-white'}`}>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
            </svg>
            {t('dashboard.pilots')}
          </a>

          <a href={translatePath('/dashboard/staff')}
             class={`flex items-center gap-3 px-4 py-3 rounded-lg transition-colors ${currentSection === 'staff' ? 'bg-racing-green text-white' : 'text-racing-silver hover:bg-racing-silver/10 hover:text-white'}`}>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            {t('dashboard.staff')}
          </a>

          <a href={translatePath('/dashboard/moto')}
             class={`flex items-center gap-3 px-4 py-3 rounded-lg transition-colors ${currentSection === 'moto' ? 'bg-racing-green text-white' : 'text-racing-silver hover:bg-racing-silver/10 hover:text-white'}`}>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
            {t('dashboard.motorcycle')}
          </a>
        </nav>
      </aside>

      <!-- Mobile bottom nav -->
      <nav class="md:hidden fixed bottom-0 left-0 right-0 bg-racing-gray border-t border-racing-silver/10 z-40">
        <div class="flex justify-around py-2">
          <a href={translatePath('/dashboard')}
             class={`flex flex-col items-center px-3 py-2 ${currentSection === 'dashboard' ? 'text-racing-green' : 'text-racing-silver'}`}>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
            </svg>
            <span class="text-xs mt-1">Home</span>
          </a>
          <a href={translatePath('/dashboard/pilotos')}
             class={`flex flex-col items-center px-3 py-2 ${currentSection === 'pilotos' ? 'text-racing-green' : 'text-racing-silver'}`}>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
            </svg>
            <span class="text-xs mt-1">{t('dashboard.pilots')}</span>
          </a>
          <a href={translatePath('/dashboard/staff')}
             class={`flex flex-col items-center px-3 py-2 ${currentSection === 'staff' ? 'text-racing-green' : 'text-racing-silver'}`}>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <span class="text-xs mt-1">{t('dashboard.staff')}</span>
          </a>
          <a href={translatePath('/dashboard/moto')}
             class={`flex flex-col items-center px-3 py-2 ${currentSection === 'moto' ? 'text-racing-green' : 'text-racing-silver'}`}>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
            <span class="text-xs mt-1">{t('dashboard.motorcycle')}</span>
          </a>
        </div>
      </nav>

      <!-- Content -->
      <main class="flex-grow md:ml-64 p-4 md:p-8 pb-24 md:pb-8">
        <slot />
      </main>
    </div>

    <!-- Scripts -->
    <script>
      import { firebaseAuth } from '../lib/firebase-auth';

      // Initialize Firebase Auth and wait for user state
      const lang = document.documentElement.lang || 'es';
      await firebaseAuth.init();
      const user = await firebaseAuth.waitForUser();

      // Check if logged in
      if (!user) {
        const loginPath = lang === 'en' ? '/en/auth/login' : '/auth/login';
        window.location.href = loginPath;
      } else {
        // Update user name display
        const userName = document.getElementById('user-name');
        if (userName) {
          userName.textContent = user.displayName || user.email.split('@')[0];
        }
      }

      // User dropdown toggle
      const userMenuBtn = document.getElementById('user-menu-btn');
      const userDropdown = document.getElementById('user-dropdown');

      userMenuBtn?.addEventListener('click', () => {
        userDropdown?.classList.toggle('hidden');
      });

      // Close dropdown on outside click
      document.addEventListener('click', (e) => {
        const container = document.getElementById('user-menu-container');
        if (container && !container.contains(e.target as Node)) {
          userDropdown?.classList.add('hidden');
        }
      });

      // Logout handler
      const logoutBtn = document.getElementById('logout-btn');
      logoutBtn?.addEventListener('click', async () => {
        await firebaseAuth.logout();
        const homePath = lang === 'en' ? '/en' : '/';
        window.location.href = homePath;
      });

      // Listen for auth changes
      firebaseAuth.onAuthChange((user) => {
        if (!user) {
          const loginPath = lang === 'en' ? '/en/auth/login' : '/auth/login';
          window.location.href = loginPath;
        }
      });
    </script>
  </body>
</html>
